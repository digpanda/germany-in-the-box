<% if @users.size > 0 %>
  <table class="table cart-table">
    <thead>
      <th>
        <%= I18n.t(:email, scope: :edit_account) %>
      </th>
      <th>
        <%= I18n.t(:username, scope: :edit_account) %>
      </th>
      <th>
        <%= I18n.t(:role, scope: :edit_account) %>
      </th>
      <th>
        <%= I18n.t(:sign_in_count, scope: :edit_account) %>
      </th>
      <th>
        <%= I18n.t(:last_sign_in_at, scope: :edit_account) %>
      </th>
      <th>
        <%= I18n.t(:operations, scope: :edit_accounts) %>
      </th>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <td>
            <%= u.email %>
          </td>
          <td>
            <%= u.username %>
          </td>
          <td>
            <%= u.role %>
          </td>
          <td>
            <%= u.sign_in_count %>
          </td>
          <td>
            <%= u.last_sign_in_at ? l(u.last_sign_in_at, :format => '%Y-%m-%d %H:%M:%S') : '' %>
          </td>
          <td>
            <% if u.id != current_user.id %>
              <%= link_to '', edit_account_user_path(u, :user_info_edit_part => :edit_accounts), :class => 'fa fa-key fa-2x', :title => I18n.t(:reset_password, scope: :edit_shops) %>
              <%= link_to '', user_path(u), :method => :delete, data: { confirm: I18n.t(:delete_application_message, scope: :edit_accounts) }, :class => 'fa fa-times-circle fa-2x', :title => I18n.t(:remove, scope: :edit_accounts) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h4>
    <%= I18n.t(:no_applications, scope: :edit_shop_application) %>
  </h4>
<% end %>
