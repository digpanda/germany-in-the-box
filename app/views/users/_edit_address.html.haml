#edit-address-dialog.mfp-with-anim.mfp-hide.mfp-dialog.clearfix
  %form
    .form-group
      %label Country
      %input.form-control{:type => "text", :value => "USA"}/
    .form-group
      %label City
      %input.form-control{:type => "text", :value => "San Francisco, CA"}/
    .form-group
      %label Address
      %input.form-control{:type => "text", :value => "1355 Market St, Suite 900"}/
    .form-group
      %label Zip/Postal
      %input.form-control{:type => "text", :value => "94103"}/
    .checkbox
      %label
        %input.i-check{:type => "checkbox"}>/
        Set Primary
    %input.btn.btn-primary{:type => "submit", :value => "Save Changes"}/
#add-address-dialog.mfp-with-anim.mfp-hide.mfp-dialog.clearfix
  %form
    .form-group
      %label Country
      %input.form-control{:type => "text"}/
    .form-group
      %label City
      %input.form-control{:type => "text"}/
    .form-group
      %label Address
      %input.form-control{:type => "text"}/
    .form-group
      %label Zip/Postal
      %input.form-control{:type => "text"}/
    .checkbox
      %label
        %input.i-check{:checked => "checked", :type => "checkbox"}>/
        Set Primary
    %input.btn.btn-primary{:type => "submit", :value => "Add Address"}/
.row.row-wrap
  .col-md-4
    .address-box
      %a.address-box-remove{"data-placement" => "right", "data-toggle" => "tooltip", :href => "#", :title => "Remove"}
      %a.address-box-edit.popup-text{"data-effect" => "mfp-move-from-top", "data-placement" => "right", "data-toggle" => "tooltip", :href => "#edit-address-dialog", :title => "Edit"}
      %ul
        %li Country : USA
        %li City: San Francisco, CA
        %li Address: 1355 Market St, Suite 900
        %li Zip/Postal: 94103
      .radio
        %label
          %input.i-radio{:name => "primaryAddressOption", :type => "radio"}>/
          Primary Address
