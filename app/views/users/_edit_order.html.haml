- if current_user.orders.count > 0
  %table.table.cart-table
    %thead
      %tr
        %th Id
        %th Status
        %th Total Price
        %th Created at
        %th Updated at
        %th Operation
    %tbody
      - current_user.orders.each do |o|
        %tr
          %td= link_to o.id, order_path(o)
          %td= o.status
          %td= o.total_price
          %td= o.c_at
          %td= o.u_at
          -unless o.status == :checked_out
            %td
              = link_to "Delete", order_path(o), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }
              = link_to "Continue", continue_order_path(o)
          -else
            %td
- else
  %h4= 'You haven\'t ordered anything.'