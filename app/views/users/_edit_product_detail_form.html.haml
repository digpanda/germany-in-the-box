                  =I18n.t(:upload, scope: :image_upload)
                = fs.file_field :img1, :accept => "image/png, image/jpeg, image/jpg", :img_id => "#img_1_#{@product.id}", :class => 'img-file-upload upload', :onchange =>"validateImgFile(this);"
            %td{:colspan => 2, :align => :center}
