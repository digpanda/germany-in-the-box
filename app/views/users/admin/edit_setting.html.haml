.col-md-6.col-sm-9.col-xs-12
  = form_for admin_settings_path, html: {method: 'patch', 'data-toggle': 'validator'} do |f|
    .panel-group
      .panel.panel-default
        .panel-body
          .form-group
            = f.label :exchange_rate_to_yuan, I18n.t(:exchange_rate_to_yuan, scope: :edit_settings), :class => 'control-label'
            = f.text_field :exchange_rate_to_yuan, value: number_with_precision(@settings.exchange_rate_to_yuan, :precision => 2), :class => 'form-control', :required => true, :autocomplete => :off, :id => 'exchange_rate'
          .form-group
            = f.label :exchange_rate_to_yuan_confirmation, I18n.t(:exchange_rate_to_yuan_confirmation, scope: :edit_settings), :class => 'control-label'
            = f.text_field :exchange_rate_to_yuan_confirmation, value: number_with_precision(@settings.exchange_rate_to_yuan, :precision => 2), :class => 'form-control', :required => true, :autocomplete => :off, 'data-match': '#exchange_rate'
      .panel.panel-default
        .panel-body
          .form-group
            = f.label :max_total_per_day, I18n.t(:max_total_per_day, scope: :edit_settings), :class => 'control-label'
            = f.text_field :max_total_per_day, value: number_with_precision(@settings.max_total_per_day, :precision => 2), :class => 'form-control', :required => true, :autocomplete => :off
    = f.button I18n.t(:save, scope: :edit_settings), :type => 'submit', :class => 'btn btn-primary', name: :user_info_edit_part, value: :edit_settings
