%table.table.table-bordered
  %thead
    %td= I18n.t(:name, scope: :edit_shop)
    %td= I18n.t(:email, scope: :shop_application)
    %td= I18n.t(:password, scope: :shop_application)
  %tbody
    - @applications.each do |a|
      %tr
        %td= link_to a.email, shop_application_path(a)
        %td= a.code[0,8]
        %td= a.name

