<div class="row">
  <div class="col-md-12">
    <div class="service-infos__actions">

      <hr />
      <div class="+small-spacer"></div>


      <!-- Inquiry modal -->
      <div class="remodal" data-remodal-options="hashTracking: false" data-remodal-id="service-inquiry">

        <div class="service-inquiry">
          <!-- Close Action -->
          <button data-remodal-action="close" class="remodal-close"></button>

          <%= render partial: 'guest/inquiries/form', locals: { inquiry: inquiry, service: service } %>

        </div>
      </div>

      <!-- Button -->
      <div class="row">
        <div class="+centered">
          <%= link_to I18n.t('services.ask_for_inquiry'), '#modal', class: 'main-button__solid --large', data: {'remodal-target': 'service-inquiry' } %>
        </div>
      </div>

      <div class="row">
        <div class="+centered">
          <div class="+spacer"></div>
          <p><%= I18n.t('service.please_scan_qrcode') %></p>
          <img src="/images/stickers/wechat_service.jpg" width="600px" />
        </div>
        <%= I18n.t('services.contact_us') %>

      </div>

    </div>
  </div>
</div>
