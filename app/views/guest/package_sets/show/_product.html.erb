<div class="remodal product-miniblock__remodal" data-remodal-options="hashTracking: false" data-remodal-id="package-sku-<%= package_sku.id %>">

  <div class="product-miniblock">

    <!-- Close Action -->
    <button data-remodal-action="close" class="remodal-close"></button>

    <!-- Image -->
    <div class="product-miniblock__image" style="background-image:url('<%= package_sku.sku.decorate.image_url(:img0, :fullsize) %>');">
    </div>

    <div class="clearfix"></div>

    <!-- Title + Description -->
    <div class="product-miniblock__content">
      <h3><%= package_sku.product.brand %></h3>
      <div class="product-miniblock__name"><%= package_sku.product.name %> - <%= package_sku.quantity %> units</div>
      <div class="product-miniblock__desc"><%= package_sku.product.decorate.short_desc(100) %></div>
    </div>

  </div>

</div>


<div class="product-miniblock">

  <a data-remodal-target="package-sku-<%= package_sku.id %>" href="#" >

  <!-- Image -->
  <div class="product-miniblock__image lazy" data-original="<%= package_sku.sku.decorate.image_url(:img0, :fullsize) %>" style="background-image:url('/images/grey.png');">
  </div>

  <div class="clearfix"></div>

  <!-- Title + Description -->
  <div class="product-miniblock__content">
    <h3><%= package_sku.product.brand %></h3>
    <p><%= package_sku.product.name %></p>
    <div class="product-miniblock__extra">
      <%= package_sku.quantity %> x <%= package_sku.sku.option_names.join(', ') %>
    </div>
  </div>

</a>

</div>
