                </div>

=======
>>>>>>> Stashed changes
            </div>
          </div>
        </div>
      </div>

      <!-- Price + Purchase -->
      <div class="row">
        <div class="col-md-12">
          <div class="package-set-infos__actions">

            <hr />

            <!-- Prices -->
            <div class="row">
              <div class="+centered">
                <% if @package_set.casual_price? %>
                  <div class="package-set-infos__original-price"><%= @package_set.casual_price.in_euro.to_yuan.display %></div>
                <% end %>
                <div class="package-set-infos__new-price"><%= @package_set.end_price.in_euro.to_yuan.display %></div>
                <div class="package-set-infos__euro-price"><%#= @package_set.end_price.in_euro.display %> ( <%= I18n.t('cart.all_included') %> )</div>
                <div class="+spacer"></div>
              </div>
            </div>

            <!-- Buttons -->
            <div class="row">
              <div class="+centered">
                <%= link_to I18n.t('package_set.buy_it'), nil,
                            class: 'js-add-package-set main-button__solid --large', :data => { :package_set_id => @package_set.id.to_s } %>
              </div>
            </div>

            <div class="row">
              <div class="package-set-infos__qrcode">
                <img src="<%= guest_package_set_qrcode_path(@package_set) %>" />
                <p>Please scan QRCode for Wechat fast-buy</p>
              </div>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<% if @package_set.package_skus.first&.product&.brand&.html_desc&.present? %>
  <div class="row">
    <div class="col-md-12">
      <div class="package-set-infos">
        <div><%= @package_set.package_skus.first.product.brand.html_desc.html_safe %></div>
      </div>
    </div>
  </div>
<% end %>

