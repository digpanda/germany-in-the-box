<%= render partial: "guest/package_sets/show/header_navigation", :locals => { package_set: @package_set, category: @category, back: guest_package_sets_path(category_id: @package_set.category.id) } %>

<% if @package_set.details_cover.present? %>
  <div class="row">
    <div class="col-md-12">
      <div class="banner lazy" data-original="<%= @package_set.details_cover.url %>" style="background-image:url('/images/grey.jpg');">
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="package-set-infos">

      <!-- Modal introduction -->
      <div class="remodal" data-remodal-options="hashTracking: false" data-remodal-id="package-set-introduction">

        <div class="package-set-introduction">
          <!-- Close Action -->
          <button data-remodal-action="close" class="remodal-close"></button>
          <h1><%= @package_set.name %></h1>
          <p><%= simple_format @package_set.long_desc %></p>
        </div>
      </div>

      <!-- Introduction -->
      <div class="row">
        <div class="col-md-12">
          <div class="package-set-infos__introduction-header">
          </div>
          <div class="package-set-infos__introduction">
            <h1><%= @package_set.name %></h1>
            <p><%= simple_format @package_set.desc %></p>
          </div>
        </div>
        <% if @package_set.long_desc.present? %>
          <div class="+centered">
            <a data-remodal-target="package-set-introduction" href="#"><%= I18n.t('button.read_more') %></a>
          </div>
        <% end %>
      </div>

      <!-- Products -->
      <div class="row">
        <div class="col-md-12">
          <div class="package-set-infos__products">
            <div class="row">
              <% @package_set.package_skus.each do |package_sku| %>
                <div class="col-md-2 col-xs-6 package-set-infos__product">
                  <%= render partial: "guest/package_sets/show/product", :locals => { :package_sku => package_sku } %>
                </div>
              <% end %>
