<% if @package_set.details_cover.present? %>
  <div class="row">
    <div class="col-md-12">
      <div class="banner lazy" data-original="<%= @package_set.details_cover %>" style="background-image:url('/images/grey.png');">
      </div>
    </div>
  </div>
<% end %>

<%= render partial: "guest/package_sets/show/navigation", :locals => { :package_set => @package_set } %>

<div class="row">
  <div class="col-md-12">
    <div class="package-set-infos">

      <!-- Modal introduction -->
      <div class="remodal" data-remodal-options="hashTracking: false" data-remodal-id="package-set-introduction">
        <!-- Close Action -->
        <button data-remodal-action="close" class="remodal-close"></button>
        <h1><%= @package_set.name %></h1>
        <div style="text-align: justify;">
          <p><%= simple_format @package_set.long_desc %></p>
        </div>
      </div>

      <!-- Introduction -->
      <div class="row">
        <div class="col-md-12">
          <div class="package-set-infos__introduction">
            <h1><%= @package_set.name %></h1>
            <div style="text-align: justify;">
              <p><%= simple_format @package_set.desc %></p>
            </div>
          </div>
        </div>
        <% if @package_set.long_desc.present? %>
          <div class="+centered">
            <a data-remodal-target="package-set-introduction" href="#"><%= I18n.t(:read_more, scope: :button) %></a>
          </div>
        <% end %>
      </div>

      <!-- Products -->
      <div class="row">
        <div class="col-md-12">
          <div class="package-set-infos__products">
            <div class="row">

              <% @package_set.package_skus.each do |package_sku| %>
                <div class="col-md-2 col-xs-6">
                  <%= render partial: "guest/package_sets/show/product", :locals => { :package_sku => package_sku } %>
                </div>
              <% end %>

            </div>
          </div>
        </div>
      </div>

      <!-- Price + Purchase -->
      <div class="row">
        <div class="col-md-12">
          <div class="package-set-infos__actions">

            <hr />

            <!-- Prices -->
            <div class="row">
              <div class="+centered">
                <div class="package-set-infos__original-price"><%= @package_set.casual_price.in_euro.to_yuan.display %></div>
                <div class="package-set-infos__new-price"><%= @package_set.end_price.in_euro.to_yuan.display %></div>
                <div class="package-set-infos__euro-price"><%#= @package_set.end_price.in_euro.display %> ( <%= I18n.t(:all_included, scope: :cart) %> )</div>
                <div class="+spacer"></div>
              </div>
            </div>

            <!-- Buttons -->
            <div class="row">
              <div class="+centered">
                <%= link_to I18n.t(:buy_it, scope: :package_set), 'javascript:;', id: 'add-package-set',
                            class: 'main-button__solid --large', data: { url: api_guest_package_set_path(@package_set)} %>
              </div>
            </div>


          </div>
        </div>
      </div>

    </div>
  </div>
</div>
