<div class="categories-block__brands">

  <h4><%= I18n.t('brands.hot_brands') %></h4>

  <% brand_filters.each do |brand| %>
    <% if brand == current_brand %>
    <span class="categories-block__brands --selected"><%= brand.name %></span>
    <% else %>
    <a href="<%= guest_package_sets_path(brand_id: brand.slug, category_id: current_category&.slug) %>"><%= brand.name %></a>
    <% end %>
  <% end %>

</div>
