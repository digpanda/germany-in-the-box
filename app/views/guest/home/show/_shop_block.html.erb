<!--- TODO : when the design is finalized, please change that and abstract it properly -->
<% shop = Shop.first %>

<!-- Shop block -->
<div class="shop-block__container">

  <div class="row">
    <div class="col-md-6">
      <h3 class="shop-block__title"><%= shop.shopname %></h3>
      <h4 class="shop-block__subtitle"><%= shop.decorate.short_desc(45) %></h4>
    </div>
    <div class="col-md-6 +right +desktop">
      <a href="<%= guest_shop_path(shop) %>" class="main-button__hollow">GO TO SHOP</a>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="shop-block__thumbnail lazy" data-original="<%= shop.decorate.image_url(:banner, :detail) %>" style="background-image:url('/images/grey.gif');">
      </div>
    </div>
    <div class="col-md-8">
      <div class="shop-block__items">

        <% index = 0 %>

        <% shop.products.limit(8).in_groups_of(4, false).each do |products| %>

          <% products.each do |product| %>

            <% index += 1 %>

            <!-- NOTE : tweak to display only if desktop for the rest of the items -->

            <% if index > 2 %>

              <div class="col-md-3 col-xs-6 +desktop">
                <div class="shop-block__item lazy" data-original="<%= product.decorate.product_cover_url %>" style="background-image:url('/images/grey.gif');">
                </div>
              </div>

            <% else %>

              <div class="col-md-3 col-xs-6">
                <div class="shop-block__item lazy" data-original="<%= product.decorate.product_cover_url %>" style="background-image:url('/images/grey.gif');">
                </div>
              </div>

            <% end %>

          <% end %>

          <div class="clearfix"></div>
          <div class="+small-spacer"></div>

        <% end %>

      </div>

      <div class="+mobile +centered">
        <a href="<%= guest_shop_path(shop) %>" class="main-button__hollow --large">GO TO SHOP</a>
        <div class="+small-spacer"></div>
      </div>

    </div>
  </div>
</div>
