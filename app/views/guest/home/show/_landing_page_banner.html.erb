<!-- Big banner container -->
<% if landing_page_highlight? %>
  <div class="row +desktop">
    <div class="col-md-12">
      <div class="landing-banner-desktop lazy" data-original="<%= Setting.instance.package_sets_cover %>" style="background-image:url('/images/grey.png');">
        <div class="landing-banner-desktop__content">
          <% if Setting.instance.landing_page_title.present? %>
          <%= render partial: "guest/home/show/landing_page_banner/content" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row +mobile">
    <div class="col-xs-12">
      <div class="landing-banner-mobile" data-original="" style="background-image:url('<%= Setting.instance.package_sets_cover %>')">
      </div>
    </div>
    <div class="col-xs-12">
      <div class="landing-banner-mobile__content">
        <%= render partial: "guest/home/show/landing_page_banner/content" %>
      </div>
  </div>
  </div>
<% end %>
