<% unless Settings.instance.highlight_title&.empty? %>
<div class="row">
  <div class="announcement-landing col-md-10 col-md-push-1 col-md-pull-1">
    <div class="row">

      <div class="row">
        <div class="col-md-4">

        </div>
      </div>

      <div class="row">
        <div class="col-md-3 announcement-landing__girl">
          <div class="announcement-landing__bubble">
            <%= Settings.instance.highlight_title %>
          </div>
          <div class="announcement-landing__bubble-arrow">
          </div>
          <img src="images/mascotte/announcement-girl.png">
        </div>

        <div class="col-md-9">
          <div class="announcement-landing__products">
            <div class="announcement-landing__products-arrow">
            </div>
            <div class="row">
              <div class="announcement-landing__products-inside">
                  <div class="col-md-12 announcement-landing__products-title">
                    <h3><%= I18n.t(:highlight_of_the_day, scope: :landing_page) %></h3>
                  </div>
                  <% Product.with_highlight.take(3).each do |product| %>
                  <div class="col-md-4 shop-page-product --no-border">
                    <%= render partial: 'products/product_box', :locals => {:product => product} %>
                  </div>
                  <% end %>
              </div>
            </div>
          </div>
          <div class="+small-spacer"></div>
          <div class="announcement-landing__more">
            <a href="#" class="btn-large +discount-button"><%= I18n.t(:see_more, scope: :landing_page) %> <i class="fa fa-magic"></i></a>
          </div>
        </div>

      </div>
      <div class="+spacer"></div>

  </div>
</div>
<% end %>
