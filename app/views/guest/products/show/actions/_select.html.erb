<!-- Warnings -->
<% if sku.quantity_warning? %>
  <span class="+red +up +bold"> <%= I18n.t(:only, scope: :product_left) %> <span id="quantity-left"><%= sku.quantity %></span> <%= I18n.t(:left, scope: :product_left) %></span>
<% elsif sku.nothing_left? %>
  <span class="+red +up +bold"> <%= I18n.t(:no_stock_left, scope: :product_left) %></span>
<% elsif !sku.product.decorate.can_buy? %>
  <span class="+red +up +bold"> <%= I18n.t(:not_ready_to_sell, scope: :product_left) %></span>
<% end %>

<div class="+small-spacer"></div>

<%= form_tag guest_order_items_path, :method => :post do %>

    <%= hidden_field_tag 'sku[product_id]', "#{sku.product.id}" %>

    <% if sku %>

        <%= render partial: "guest/products/show/actions/select/sku", :locals => {product: sku.product} %>
        <%= render partial: "guest/products/show/actions/select/quantity", :locals => {product: sku.product} %>

        <button type="submit" class="main-button__solid --full" <%= !enough_inventory(sku.product.decorate.featured_sku, 1) ? "disabled" : "" %> >
          <%= I18n.t(:add_to_cart, scope: :popular_products) %>
        </button>

    <% else %>

        <button type="submit" class="main-button__solid --full disabled">
          <%= I18n.t(:not_available, scope: :popular_products) %>
        </button>

    <% end %>

<% end %>
