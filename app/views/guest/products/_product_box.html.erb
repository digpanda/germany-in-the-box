<!-- Start Product -->
<div class="row">

  <a href="<%= guest_product_path(product) %>">

    <div class="col-md-12">

      <% if product.discount? %>
      <div class="shop-page-product__discount">
        <div><%= product.decorate.best_discount %></div>
      </div>
      <% end %>

      <div class="shop-page-product__image +centered lazy" data-original="<%= product.decorate.product_cover_url %>" style="background-image:url('/images/grey.gif');">

        <div class="+small-spacer"></div>

      </div>

    </div>

    <div class="col-md-12">

      <div class="shop-page-product__description">

        <h2>
          <%= product.brand %>
        </h2>

        <h3>
          <%= product.name %>
        </h3>

        <p>
          <%= product.decorate.short_desc %>
        </p>


          <div>
          <% if product.discount? %>

            <span class="+barred-price">
              <%= product.featured_sku.decorate.price_before_discount_in_yuan_html.html_safe %>
            </span>

          <% end %>

            <span class="+price-yuan"><%= product.decorate.preview_price_yuan%></span>
          </div>

          <div class="+price-euro"><%= product.decorate.preview_price_euro %></div>


      </div>

    </div>

  </a>
</div>
<!-- End Product -->
