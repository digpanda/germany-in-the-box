<a href="<%= guest_shop_path(casual_shop) %>">
<div class="col-md-4 shop-blocks__secondary --shop" style="background-image:url(<%= casual_shop.decorate.image_url(:banner, :detail) %>);">
  <div class="+overlay"></div>

  <div class="+onoverlay">

    <!-- Content -->
    <div class="shop-blocks__secondary --content">

      <div class="col-md-4 shop-blocks__secondary --avatar" style="background-image:url('<%= casual_shop.decorate.image_url(:logo, :thumb) %>');">
        <!-- <img src="<%= casual_shop.decorate.image_url(:logo, :thumb) %>"> -->
      </div>

      <div class="col-md-10 shop-blocks__secondary --content-text">
        <h3><%= casual_shop.shopname %>
        <% if casual_shop.discount? %>
        <span id="product_discount" class="+discount"><%= I18n.t(:discount, scope: :discount) %></span>
        <% end %>
        </h3>
        <div class="shop-blocks__secondary --author">by <%= casual_shop.decorate.manager_full_name %></div>

        <div class="+small-spacer"></div>

        <%= casual_shop.decorate.short_desc(45) %>
      </div>

    </div>
    <!-- End of Content -->

  </div>

</div>
</a>
