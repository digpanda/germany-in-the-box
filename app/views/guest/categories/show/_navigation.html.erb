<div class="row">
  <div class="col-md-12">
    <div class="page-navigation">
      <div class="row">

        <!-- Previous category -->
        <div class="col-md-4 col-xs-6">
          <div class="page-navigation__left">
            <% if category.previous %>
              <a href="<%= guest_category_path(category.previous) %>"><i class="fa fa-caret-left"></i> <%= category.previous.name %></a>
            <% end %>
          </div>
        </div>

        <!-- Number of package sets -->
        <div class="col-md-4">
          <div class="page-navigation__middle +desktop">
            <%= render partial: "layouts/customer/subheader/breadcrumb" %>
          </div>
        </div>

        <!-- Categories filtering -->
        <div class="col-md-4 col-xs-6">
          <div class="page-navigation__right">
            <% if category.next %>
              <a href="<%= guest_category_path(category.next) %>"><%= category.next.name %> <i class="fa fa-caret-right"></i></a>
            <% end %>
          </div>
        </div>
        
      </div>
    </div>
  </div>
</div>
