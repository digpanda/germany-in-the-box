<% products.in_groups_of(4, false).each do |grouped_products| %>

  <div class="row">

    <% grouped_products.each do |product| %>

    <div class="col-md-3">
      <div class="shop-page-product">
        <%= render partial: 'guest/products/product_box', :locals => {:product => product} %>
      </div>
    </div>

    <% end %>

  </div>
    <div class="+small-spacer"></div>
<% end %>
