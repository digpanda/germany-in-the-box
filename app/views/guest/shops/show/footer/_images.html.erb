<% 8.times.to_a.in_groups_of(4, false).each do |group| %>

  <div class="row shop-page-footer__images">

    <div class="col-md-10 col-md-push-1 col-md-pull-1">
      <% group.each do |number| %>
        <% unless shop.public_send("seal#{number}").url.empty? %>
        <div class="col-md-3 shop-page-footer__images --image lazy" data-original="<%= shop.decorate.image_url("seal#{number}", :thumb) %>" style="background-image:url('/images/grey.gif');">
        </div>
        <% end %>
      <% end %>
    </div>

  </div>
  <div class="+small-spacer"></div>

<% end %>
