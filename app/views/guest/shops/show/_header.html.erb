<div class="col-md-12 shop-page-header" style="background-image:url(<%= shop.decorate.image_url(:banner, :detail) %>);">
  <div class="+overlay"></div>

  <div class="+onoverlay">

    <!-- Content -->
    <div class="shop-page-header__content +centered">

      <div class="row">

        <div class="shop-page-header__content --avatar +centered" style="background-image:url('<%= shop.decorate.image_url(:logo, :detail
        ) %>');"></div>

      </div>

      <div class="+small-spacer"></div>

      <div class="row">

        <h2><%= shop.shopname %></h2>
        <div class="shop-page-header__author">by <%= shop.decorate.manager_full_name %></div>

        <!-- Minimum order -->
        <% unless shop.min_total.zero? %>
          <div class="shop-page-header__minimum-order">
            <%= I18n.t(:minimum_order, scope: :shop) %> <%= shop.min_total.in_euro.to_yuan.display %>
          </div>
        <% end %>

      </div>

      <div class="+small-spacer"></div>

      <!-- Description of the shop -->
      <div class="row">
        <div class="col-md-10 col-md-push-1 col-md-pull-1">
          <%= simple_format(shop.desc) %>
        </div>
      </div>

      <!-- Categories shortcut anchor -->
      <% unless shop.categories.count <= 1 %>
        <div class="row">
          <div class="col-md-10 col-md-push-1 col-md-pull-1">
            <div class="tags">
              <% shop.categories.each do |category| %>
                <span class="tags__tag">
                  <a href="#<%= category.slug %>"><%= category.name %></a>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
    <!-- End of Content -->

  </div>

</div>
