<% if banners.size > 0 %>
<div class="main-table">
<table>
  <thead>
    <th>
      #
    </th>
    <th>
      Cover
    </th>
    <th>
      Link
    </th>
    <th>
      Active
    </th>
    <th>
      Created At
    </th>
    <th>
      Updated At
    </th>
    <th>
      Action
    </th>
  </thead>
  <tbody>
    <% banners.each do |banner| %>
    <tr>
      <td>
        <%= banner.id %>
      </td>
      <td>
        <img src="<%= banner.image %>" class="img-icon">
      </td>
      <td>
        <%= banner.link %>
      </td>
      <td>
        <%= boolean_icon(banner.active) %>
      </th>
      <td>
        <%= banner.c_at %>
      </td>
      <td>
        <%= banner.u_at %>
      </td>
      <td>
        <%= banner_to '', admin_banner_path(banner), :method => :get, :class => 'tooltipster fa fa-eye buttons buttons__edit', :title => "Details and configuration" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<% else %>
<div class="+white-box +centered">
  <h4>
    No banner found
  </h4>
</div>
<% end %>
