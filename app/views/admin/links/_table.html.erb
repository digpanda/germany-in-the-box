<% if links.size > 0 %>
<div class="main-table">
<table>
  <thead>
    <th>
      #
    </th>
    <th>
      Thumbnail
    </th>
    <th>
      Title
    </th>
    <th>
      Description
    </th>
    <th>
      Promotion Text A
    </th>
    <th>
      Promotion Text B
    </th>
    <th>
      Position
    </th>
    <th>
      End URL(阅读链接)
    </th>
    <th>
      Raw URL(推广链接)
    </th>
    <th>
      Valid URL
    </th>
    <th>
      Active
    </th>
    <th>
      Published At
    </th>
    <th>
      Created At
    </th>
    <th>
      Updated At
    </th>
    <th>
      Action
    </th>
  </thead>
  <tbody>
    <% links.each do |link| %>
    <tr>
      <td>
        <%= link.id %>
      </td>
      <td>
        <img src="<%= link.thumbnail_url %>" class="img-icon">
      </td>
      <td>
        <%= link.title %>
      </td>
      <td>
        <%= link.desc %>
      </td>
      <td>
        <%= link.promotion_text_a %>
      </td>
      <td>
        <%= link.promotion_text_b %>
      </td>
      <td>
        <%= editable_field(link, admin_link_path(link), :position, :text_field) %>
      </td>
      <td>
        <a href="<%= link.wechat.with_login_and_referrer(dummy_referrer) %>" target="_blank"><%= truncate link.wechat.with_login_and_referrer(dummy_referrer), length: 30 %></a>
      </td>
      <td>
        <a href="<%= link.raw_url %>" target="_blank"><%= link.raw_url %></a>
      </td>
      <td>
        <%= boolean_icon(link.valid_url) %>
      </th>
      <td>
        <%= boolean_icon(link.active) %>
      </th>
      <td>
        <%= link.published_at %>
      </td>
      <td>
        <%= link.c_at %>
      </td>
      <td>
        <%= link.u_at %>
      </td>
      <td>
        <%= link_to '', admin_link_ping_path(link), :method => :get, :class => 'tooltipster fa fa-link buttons buttons__edit', :title => "Ping" %>
        <%= link_to '', admin_link_path(link), :method => :get, :class => 'tooltipster fa fa-eye buttons buttons__edit', :title => "Details and configuration" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<% else %>
<div class="+white-box +centered">
  <h4>
    No link found
  </h4>
</div>
<% end %>
