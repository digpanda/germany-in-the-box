<div class="details">

  <div class="row">
    <div class="col-md-10">
      <h2>Link <%= @link.title %></h2>
    </div>
    <div class="col-md-2 details__action">
    </div>
  </div>

  <div class="+small-spacer"></div>

  <div class="row details__block">
    <%= render partial: "admin/links/show/action", locals: { link: @link } %>
  </div>

  <div class="row details__block +danger-zone">
    <%= render partial: "admin/links/show/danger_zone", locals: { link: @link } %>
  </div>

</div>
