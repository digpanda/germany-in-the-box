<% if payment_gateways.size > 0 %>
<table class="white-table">
  <thead>
    <th>
      Provider
    </th>
    <th>
      Payment Method
    </th>
    <th>
      Merchant ID
    </th>
    <th>
      Merchant Secret
    </th>
    <th>
      Created At
    </th>
    <th>
      Updated At
    </th>
    <th>
      Action
    </th>
  </thead>
  <tbody>
    <% payment_gateways.each do |payment_gateway| %>
      <%= fields_for :payment_gateways, payment_gateway do |payment_gateway_field| %>
      <tr>
        <td>
          <%= payment_gateway.provider %>
        </td>
        <td>
          <%= payment_gateway.payment_method %>
        </td>
        <td>
          <%= editable_field(payment_gateway, admin_payment_gateway_path(payment_gateway), :merchant_id, :text_field) %>
        </td>
        <td>
          <%= editable_field(payment_gateway, admin_payment_gateway_path(payment_gateway), :merchant_secret, :text_field) %>
        </td>
        <td>
          <%= payment_gateway.c_at %>
        </td>
        <td>
          <%= payment_gateway.u_at %>
        </td>
        <td>
          <%= link_to '', admin_payment_gateway_path(payment_gateway), :method => :delete, data: { confirm: "Are you sure you want to delete this payment gateway ?"}, :class => 'tooltipster fa fa-times buttons buttons__delete', :title => "Delete payment gateway" %>
        </td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<% else %>
<div class="+white-box +centered">
  <h4>
    No payment gateway found
  </h4>
</div>
<% end %>
