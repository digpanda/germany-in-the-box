<%= form_for [:admin, @setting], :data => {:toggle => 'validator'} do |form| %>


<div class="form-group">
  <%= form.label :tester_restricted_areas, "Tester Restricted Areas" %>

  <div class="+down">
    <!-- the `form.object` represents the `shop` model -->
    <% if @setting.tester_restricted_areas %>
      <%= form.label :tester_restricted_areas, :class => 'switch' do %>
        <%= form.check_box :tester_restricted_areas %>
        <div class="switch__slider"></div>
      <% end %>
    <% else %>
      <%= form.label :tester_restricted_areas, :class => 'switch' do %>
        <%= form.check_box :tester_restricted_areas %>
        <div class="switch__slider"></div>
      <% end %>
    <% end %>
  </div>
</div>

  <div class="form-group">
    <%= form.label :alert, "Alert" %>
    <%= form.text_field :alert, :autocomplete => :off %>
  </div>

  <div class="form-group">
    <%= form.label :search_suggestion, "Search suggestion" %>
    <%= form.text_field :search_suggestion, :autocomplete => :off %>
  </div>

  <%= form.button "Update", :type => 'submit', :class => 'btn btn-primary', name: :user_info_edit_part, value: :edit_settings %>
<% end %>
