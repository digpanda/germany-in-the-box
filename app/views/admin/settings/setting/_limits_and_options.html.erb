<%= form_for [:admin, @setting], :data => {:toggle => 'validator'} do |form| %>

<div class="form-group">
  <%= form.label :logistic_partner, "Logistic Partner", :class => 'control-label' %>
  <br />
  <%= form.select :logistic_partner, logistic_partners %>
</div>

<div class="form-group">
  <%= form.label :exchange_rate_to_yuan, I18n.t(:exchange_rate_to_yuan, scope: :edit_settings), :class => 'control-label' %>
  <%= form.text_field :exchange_rate_to_yuan, :class => 'form-control', :required => true, :autocomplete => :off, :id => 'exchange_rate' %>
</div>

<div class="form-group">
  <%= form.label :max_total_per_day, "Maximum per day (CNY)", :class => 'control-label' %>
  <%= form.text_field :max_total_per_day, :class => 'form-control', :required => true, :autocomplete => :off %>
</div>

<div class="form-group">
  <%= form.label :default_coupon_discount, "Default Coupon Discount (%)", :class => 'control-label' %>
  <%= form.text_field :default_coupon_discount, :class => 'form-control', :autocomplete => :off %>
</div>

<div class="form-group">
  <%= form.label :referrer_money_claim, "Referrer Money Claim", :class => 'control-label' %>
  <%= form.text_field :referrer_money_claim, :class => 'form-control', :autocomplete => :off %>
</div>

<div class="form-group">
  <%= form.label :force_referrer_tokens, "Force referrer tokens" %>

  <div class="+down">
    <!-- the `form.object` represents the `shop` model -->
    <% if @setting.force_referrer_tokens %>
      <%= form.label :force_referrer_tokens, :class => 'switch' do %>
        <%= form.check_box :force_referrer_tokens %>
        <div class="switch__slider"></div>
      <% end %>
    <% else %>
      <%= form.label :force_referrer_tokens, :class => 'switch' do %>
        <%= form.check_box :force_referrer_tokens %>
        <div class="switch__slider"></div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="form-group">
  <%= form.button I18n.t(:save, scope: :edit_settings), :type => 'submit', :class => 'btn btn-primary', name: :user_info_edit_part, value: :edit_settings %>
</div>
<% end %>
