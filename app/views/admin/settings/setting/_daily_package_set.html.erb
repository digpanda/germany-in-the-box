<%= form_for [:admin, @setting], :data => {:toggle => 'validator'} do |form| %>

  <div class="form-group">
    <%= form.label :promoted_package_set, "Promoted Package Set" %>
    <%= form.collection_select :promoted_package_set, PackageSet.all, :id, :name, { prompt: true, selected: form.object.promoted_package_set&.id }, { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= form.label :promoted_package_set_text, "Promotion Text" %>
    <%= form.text_field :promoted_package_set_text, :autocomplete => :off %>
  </div>

  <%= form.button "Update", :type => 'submit', :class => 'btn btn-primary', value: :edit_settings %>
<% end %>
