<div class="details">

  <div class="row">
    <div class="col-md-10">
      <h2>Service <%= @service.name %></h2>
    </div>
    <div class="col-md-2 details__action">
    </div>
  </div>

  <div class="+small-spacer"></div>

  <div class="row details__block">
    <%= render partial: "admin/services/show/action", locals: { service: @service } %>
  </div>

  <div class="row details__block +danger-zone">
    <%= render partial: "admin/services/show/danger_zone", locals: { service: @service } %>
  </div>

</div>
