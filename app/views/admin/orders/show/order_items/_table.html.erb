<div class="main-table">
<table>
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Sku
      </th>
      <th>
        Referrer Rate
      </th>
      <th>
        Shop
      </th>
      <th>
        Quantity
      </th>
      <th>
        Unit Price (Raw)
      </th>
      <th>
        Total Price
      </th>
      <th>
        Action
      </th>
    </tr>
  </thead>
  <tbody>
    <% order_items.each do |order_item| %>
      <tr>
        <td>
          <%= order_item.product.name %>
        </td>
        <td>
          <%= order_item.sku.display_option_names %>
        </td>
        <td>
          <%= order_item.referrer_rate %>
        </td>
        <td>
          <%= order_item.product.shop.name %>
        </td>
        <td>
          <%= order_item.quantity %>
        </td>
        <td>
          <%= editable_field(order_item, admin_order_item_path(order_item), :price_per_unit, :text_field) %>
        </td>
        <td>
          <%= order_item.total_price.in_euro.display %>
        </td>
        <td>
          <a data-method="patch" href="<%= admin_order_item_refresh_referrer_rate_path(order_item) %>">Refresh referrer rate</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
