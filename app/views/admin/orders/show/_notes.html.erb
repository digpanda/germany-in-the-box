<div class="col-md-12">
  <div class="row">
    <div class="col-md-10 +nopadding">
      <h3>Notes</h3>
    </div>
    <div class="col-md-2 details__action">
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-8">

      <div class="notes__general">
        <div class="notes__message">
          Description hereDescription hereDescription hereDescription hereDescription hereDescription here
        </div>
        <div class="notes__author">
          by <a href="#">Laurent Schaffner</a> on 29302°2930°
        </div>
      </div>
      <hr />

    </div>
  </div>
  <div class="row">
    <div class="col-md-8">

      <div class="notes">
      <%= form_for Note.new, :data => {:toggle => 'validator'}, :url => admin_note_path, :method => :post do |f| %>
        Type <%= f.select(:type, {"General" => :general}) %><br />
        Message <%= f.text_area :message %><br />
        <%= f.submit "Create new note", :class => "btn btn-info" %>
      <% end %>
      </div>

    </div>
  </div>

</div>
