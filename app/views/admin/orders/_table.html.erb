<% if orders.size > 0 %>
<table class="main-table">
  <thead>
    <tr>
      <th>
        Delivery</br>
        Address Name
      </th>
      <td>
        Total Paid
      </th>
      <th>
        Status
      </th>
      <th>
        Total Price
      </th>
      <th>
        Label
      </th>
      <th>
        Updated At
      </th>
      <th>
        Action
      </th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do |order| %>
    <tr>
      <td>
        <% unless order.shipping_address.nil? %>
        <%= order.shipping_address.decorate.chinese_full_name %>
        <% end %>
      </td>
      <td>
        <%= order.total_paid_in_yuan %> (<%= order.total_paid_in_euro %>)
      </td>
      <td>
        <%= order.status %>
      </td>
      <td>
        <%= order.total_price_with_extra_costs.in_euro.to_yuan.display %> (<%= order.total_price_with_extra_costs.in_euro.display %>)
      </td>
      <td>
        <%= render partial: "shared/orders/partials/files_buttons", locals: { :order => order } %>
      </td>
      <td>
        <%= order.u_at.localtime.strftime('%Y-%m-%d %H:%M:%S').in_time_zone %>
      </td>
      <td>
        <a href="<%= admin_order_path(order) %>"><i class="fa fa-eye tooltipster buttons buttons__edit" title="Details and configuration"></i></a>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<div class="+white-box +centered">
  <h4>
    <%= I18n.t(:no_order, scope: :edit_order) %>
  </h4>
</div>
<% end %>
