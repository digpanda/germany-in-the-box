<div class="details">
<%= form_for @order, url: admin_order_path, method: :patch do |form| %>
<h2>Order <%= @order.id %></h2>

<div class="row details__block">

  <div class="col-md-12">
    <div class="row">
      <div class="col-md-10 details__block --title">
        <h3>Shipping details</h3>
      </div>
      <div class="col-md-2 details__block --action">
        <a href="#" id="editable-click"><i class="fa fa-edit"></i></a>
      </div>
      <hr>
    </div>
    <div class="row">
      <div class="col-md-12">
        <% if @order.shipping_address.nil? %>
        No data
        <% else %>
        Name : <%= @order.shipping_address.decorate.chinese_full_name %>
        Address : <%= @order.shipping_address.decorate.full_address %>
        <% end %>
      </div>
    </div>
  </div>

</div>

<div class="row details__block">

  <h3>Finances</h3>
  <hr>

  Bill ID : <span class="js-editable"><%= @order.bill_id ? @order.bill_id : "N/A" %></span>
  <input type="text" class="js-editable-field" value="<%= @order.bill_id %>" name="order[bill_id]" id="order_bill_id">
  <br />

  Total Paid : <%= @order.total_paid_in_yuan %><br />
  Total Price : <%= @order.decorate.total_sum_in_yuan %><br />

</div>

<div class="row details__block">

  <h3>Status</h3>
  <hr>
  <%= @order.status %>

</div>

<div class="row details__block">

<h3>BorderGuru</h3>

  <% if @order.border_guru_link_tracking %>
  <%= link_to "BorderGuru Link Tracking", @order.border_guru_link_tracking, :target => '_blank', :class => "btn btn-primary" %>
  <% end %>

  <% if @order.border_guru_shipment_id %>
    <% link_to "BorderGuru Label", download_label_order_path(@order), class: "btn btn-primary" %>
  <% end %>

</div>

<div class="row details__block">

  <h3>Files</h3>
  <hr>

  <a href="<%= shared_order_path(@order, format: "csv") %>" class="btn btn-primary">Shippment CSV</a>
  <a href="<%= shared_order_bill_path(@order, format: "pdf") %>" class="btn btn-primary">Informal Bill</a>

</div>

<div class="row details__block">

<h3>Dates</h3>
<hr>

Created at <%= @order.u_at.localtime.strftime('%Y-%m-%d %H:%M:%S') %><br />
Updated at <%= @order.c_at.localtime.strftime('%Y-%m-%d %H:%M:%S') %>

</div>

<div class="row details__block">

<h3>Actions</h3>
<hr>

<!-- Cancel @order -->
<% if @order.decorate.cancellable? %>
  <%= link_to "Cancel this order", shared_order_cancel_path(@order), method: :patch, data: { confirm: "Are you sure you want to cancel this order ?" }, class: "btn btn-info" %>
<% end %>

<!-- Destroy @order -->
<%= link_to "Destroy this order", order_path(@order), method: :delete, data: { confirm: "Are you sure you want to destroy this order ? It cannot be undone." } , class: "btn btn-danger" %>

</div>

<% end %>
</div>
