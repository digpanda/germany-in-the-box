<div class="details">

  <%= form_for @order, url: admin_order_path, method: :patch do |form| %>

  <div class="row">
    <div class="col-md-10">
      <h2>Order <%= @order.id %></h2>
    </div>
    <div class="col-md-2 details__action">
      <a href="#" id="editable-click"><i class="fa fa-edit tooltipster" title="Edit the fields"></i></a>
    </div>
  </div>

  <div class="+small-spacer"></div>

  <div class="row details__block">
    <%= render partial: "admin/orders/show/shipping_details" %>
  </div>

  <div class="row details__block">
    <%= render partial: "admin/orders/show/finances" %>
  </div>

  <div class="row details__block">
    <%= render partial: "admin/orders/show/status" %>
  </div>

  <div class="row details__block">
    <%= render partial: "admin/orders/show/border_guru" %>
  </div>

  <div class="row details__block">
    <%= render partial: "admin/orders/show/files" %>
  </div>

  <div class="row details__block">
    <%= render partial: "admin/orders/show/dates" %>
  </div>

  <div class="row details__block">
    <%= render partial: "admin/orders/show/action" %>
  </div>

  <% end %>

</div>
