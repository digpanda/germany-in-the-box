<div class="col-md-12">

  <div class="row">
    <div class="col-md-8 +nopadding">
      <h3>Categories</h3>
      <hr>
    </div>
    <div class="col-md-4 +right">
      <hr>
    </div>
  </div>

  <!-- Tax Rate -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        Tax Rate
      </label>
    </div>

    <div class="col-md-8">
      <%= form.object.duty_category&.tax_rate %> %
    </div>

  </div>

  <!-- Customer Categories -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        <%= I18n.t(:categories, scope: :edit_product) %>
      </label>
    </div>

    <div class="col-md-8">
      <%= form.fields_for :categories do |form_field| %>

        <%= form_field.select '', options_from_collection_for_select(Category.all, :id, :name, form.object.categories.first&.id), { :include_blank => I18n.t(:non_selected_text, scope: :multiselect) }, :class => 'form-control' %>

      <% end %>
    </div>

  </div>

  <!-- Duty Categories -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        <%= I18n.t(:duty_category, scope: :edit_product) %>
      </label>
    </div>

    <div class="col-md-8">

      <%= form.text_field :duty_category, :value => form.object.duty_category&.code, :id => 'duty-category', :class => 'form-control', :required => true, :placeholder => '27289' %>
      <div class="help-block with-errors"></div>
      <div class="js-duty-category"><strong>Note : if the duty category has no tax rate or is not in our database, this data won't persist.</strong></div>

    </div>

  </div>

</div>
