<%= link_to '', edit_shopkeeper_product_path(product), :class => 'tooltipster fa fa-pencil buttons buttons__edit', :title => I18n.t(:edit, scope: :edit_product) %>

<%= link_to '', shopkeeper_product_variants_path(product), :class => 'tooltipster fa fa-cubes buttons buttons__purple', :title => "Manage variants" %>

<%= link_to '', shopkeeper_product_skus_path(product), :class => 'tooltipster fa fa-tags buttons buttons__add', :title => I18n.t(:skus, scope: :edit_product) %>

<% if product.highlight %>
<%= link_to '', admin_shop_product_regular_path(product.shop, product), :method => :patch, :class => 'tooltipster fa fa-low-vision buttons buttons__delete', :title => "No highlight for this product" %>
<% else %>
<%= link_to '', admin_shop_product_highlight_path(product.shop, product), :method => :patch, :class => 'tooltipster fa fa-magic buttons buttons__purple', :title => "Highlight this product" %>
<% end %>

<% if product.approved.nil? %>
<%= link_to '', admin_shop_product_approve_path(product.shop, product), :method => :patch, :class => 'tooltipster fa fa-check buttons buttons__add', :title => "Approve this product" %>
<% else %>
<%= link_to '', admin_shop_product_disapprove_path(product.shop, product), :method => :patch, :class => 'tooltipster fa fa-minus buttons buttons__cancel', :title => "Disapprove this product" %>
<% end %>

<% if product.removable? %>
<!-- WTF ? -->
<%= link_to '', guest_product_path(product), :method => :delete, data: { confirm: I18n.t(:delete_product_message, scope: :edit_product) }, :class => 'tooltipster fa fa-times buttons buttons__delete', :title => "Remove this product" %>
<% end %>
