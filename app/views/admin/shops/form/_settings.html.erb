<div class="col-md-12">

  <div class="row">
    <div class="col-md-8 +nopadding">
      <h3>Settings</h3>
      <hr>
    </div>
    <div class="col-md-4">
    </div>
  </div>

  <!-- AGB -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        AGB
      </label>
    </div>
    <div class="col-md-8">
      <%= boolean_icon(form.object.agb) %>
    </div>
  </div>

  <!-- Merchant ID -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        <%= I18n.t('edit_shop.merchant_id') %>
      </label>
    </div>
    <div class="col-md-8">
      <%= form.object.merchant_id %>
    </div>
  </div>

  <!-- Legal Company Name -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        <%= I18n.t('edit_shop.edit_shop.name') %>
      </label>
    </div>
    <div class="col-md-8">
      <%= form.object.name %>
    </div>
  </div>

  <!-- Founding Year -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        <%= I18n.t('edit_shop.founding_year_info') %>
      </label>
    </div>
    <div class="col-md-8">
      <%= form.object.founding_year %>
    </div>
  </div>

  <!-- Tax Number -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        <%= I18n.t('edit_shop.tax_number') %>
      </label>
    </div>
    <div class="col-md-8">
      <%= form.object.tax_number %>
    </div>
  </div>

  <!-- Registration -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        <%= I18n.t('edit_shop.register') %>
      </label>
    </div>
    <div class="col-md-8">
      <%= form.object.register %>
    </div>
  </div>

  <!-- Ust ID -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        Ust ID
      </label>
    </div>
    <div class="col-md-8">
      <%= form.object.ustid %>
    </div>
  </div>

  <!-- EROI Number -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        <%= I18n.t('edit_shop.eroi') %>
      </label>
    </div>
    <div class="col-md-8">
      <%= form.object.eroi %>
    </div>
  </div>

  <!-- Highlight -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        Highlight
      </label>
    </div>
    <div class="col-md-8">
      <%= form.check_box :highlight %>
    </div>
  </div>

</div>
