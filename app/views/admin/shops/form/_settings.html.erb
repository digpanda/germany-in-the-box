<div class="col-md-12">

  <div class="row">
    <div class="col-md-8 +nopadding">
      <h3>Settings</h3>
      <hr>
    </div>
    <div class="col-md-4">
    </div>
  </div>

  <!-- BorderGuru Merchant ID -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        <%= I18n.t(:bg_merchant_id, scope: :edit_shop) %>
      </label>
    </div>
    <div class="col-md-8">
      <%= form.text_field :bg_merchant_id, :class => 'form-control' %>
    </div>
  </div>

  <!-- Wirecard Status -->
  <div class="row form-group">
    <div class="col-md-4">
      <label>
        Wirecard Status
      </label>
    </div>
    <div class="col-md-8">
      <%= form.object.wirecard_status %>
    </div>
  </div>

</div>
