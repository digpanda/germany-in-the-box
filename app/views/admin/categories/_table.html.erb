<% if categories.size > 0 %>
<div class="main-table">
<table>
  <thead>
    <th>
      Slug
    </th>
    <th>
      Description
    </th>
    <th>
      Shops
    </th>
    <th>
      Position
    </th>
    <th>
      Show
    </th>
    <th>
      Created At
    </th>
    <th>
      Updated At
    </th>
    <th>
      Action
    </th>
  </thead>
  <tbody>
    <% categories.each do |category| %>
    <tr>
      <td>
        <%= category.slug %>
      </td>
      <td>
        <%= editable_field(category, admin_category_path(category), :desc, :text_field) %>
      </td>
      <td>
        <%= category.shops.count %>
      </td>
      <td>
        <%= editable_field(category, admin_category_path(category), :position, :text_field) %>
      </td>
      <td>
        <%= editable_field(category, admin_category_path(category), :show, :select, [boolean_select, {:selected => category.show}]) %>
      </td>
      <td>
        <%= category.c_at %>
      </td>
      <td>
        <%= category.u_at %>
      </td>
      <td>
        <%= link_to '', edit_admin_category_path(category), :class => 'tooltipster fa fa-pencil buttons buttons__edit', :title => "Edit Category" %>
        <%= link_to '', admin_category_path(category), :method => :delete, data: { confirm: "Are you sure to remove this category ?" }, :class => 'tooltipster fa fa-times buttons buttons__delete', :title => "Delete this category" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<% else %>
<div class="+white-box +centered">
  <h4>
    No category found
  </h4>
</div>
<% end %>
