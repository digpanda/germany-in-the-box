<div class="col-md-12">

  <div class="row">
    <div class="col-md-8 +nopadding">
      <h3>Images</h3>
      <hr>
    </div>
    <div class="col-md-4 +right">
      <hr>
    </div>
  </div>

  <!-- Name -->
  <div class="row">
    <%= form.fields_for :images do |field| %>
      <div class="col-md-3">
        <%= field.label :file, "Optional Image ##{solve_index}" %>
        <%= js_image_file_upload(form: field, assoc: field.object, field: :file) %>
      </div>
    <% end %>
  </div>

</div>
