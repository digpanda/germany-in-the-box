<% if carts.size > 0 %>
<div class="main-table">
  <table>
    <thead>
      <tr>
        <th>
          #
        </th>
        <th>
          User
        </th>
        <th>
          Orders
        </th>
        <th>
          Created At
        </th>
        <th>
          Updated At
        </th>
        <th>
          Action
        </th>
      </tr>
    </thead>
    <tbody>
      <% carts.each do |cart| %>
      <tr>
        <td>
          <%= cart.id %>
        </td>
        <td>
          <% if cart.user %>
            <a href="<%= admin_user_path(cart.user) %>"><%= cart.user.decorate.full_name %></a>
          <% else %>
            -
          <% end %>
        </td>
        <td>
          <%= cart.orders.count %>
        </td>
        <td>
          <%= cart.c_at %>
        </td>
        <td>
          <%= cart.u_at %>
        </td>
        <td>
          <a href="<%= admin_cart_path(cart) %>"><i class="fa fa-eye tooltipster buttons buttons__edit" title="Details and configuration"></i></a>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% else %>
<div class="+white-box +centered">
  <h4>
    Nothing to show
  </h4>
</div>
<% end %>
