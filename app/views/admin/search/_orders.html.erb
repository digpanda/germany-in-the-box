<div class="col-md-12">
  <div class="row">
    <h3>Find Orders</h3>
    <hr>
  </div>
  <div class="row +overflow">

    <%= form_for admin_search_path, method: :post, html: {:toggle => 'validator'} do |form| %>

      <div class="form-group">
        <%= label_tag :order_id, "Order ID", :class => 'control-label' %>
        <%= text_field_tag :order_id, nil, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.button "Search", :type => 'submit', :class => 'btn btn-primary' %>
      </div>

    <% end %>

  </div>
</div>
