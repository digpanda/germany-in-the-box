<div class="col-md-12">
  <div class="row">
    <h3>Operations</h3>
    <hr>
  </div>
  <div class="row">

    <% if operations.size > 0 %>
    <table class="white-table">
      <thead>
        <th>
          ID
        </th>
        <th>
          Amount
        </th>
        <th>
          Description
        </th>
        <th>
          Creation
        </th>
      </thead>
      <tbody>
        <% operations.each do |operation| %>
        <tr>
          <td>
            <%= operation.id %>
          </td>
          <td>
            <%= operation.amount.in_euro.display %>
          </td>
          <td>
            <%= operation.desc %>
          </td>
          <td>
            <%= operation.c_at %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <% else %>
    <div class="+white-box +centered">
      <h4>
        No operation yet.
      </h4>
    </div>
    <% end %>

    <div>
    <%= form_for :referrer_provision_operation, :data => {:toggle => 'validator'}, :url => admin_referrer_provision_operations_path(@referrer.id), :method => :post do |f| %>
      Amount <%= f.text_field :amount %> EUR <em>(Note : for withdrawal, set a negative number)</em><br />
      Description <%= f.text_area :desc %><br />
      <%= f.submit "Create new operation", :class => "btn btn-info" %>
    <% end %>
    </div>

  </div>
</div>
