- if @root_categories.count > 0
  %table.table.cart-table
    %thead
      %th= I18n.t(:name, scope: :edit_category)
      %th= I18n.t(:code, scope: :edit_category)
      %th= I18n.t(:operations, scope: :edit_categories)
    %tbody
      - @root_categories.each do |u|
        %tr
          %td= u.name
          %td= u.code
          %td
            = link_to '', category_path(u), :method => :delete, data: { confirm: I18n.t(:delete_category_message, scope: :edit_categories) }, :class => 'fa fa-times-circle fa-2x', :title => I18n.t(:remove, scope: :edit_categories)

- else
  %h4= I18n.t(:no_categories, scope: :edit_categories)