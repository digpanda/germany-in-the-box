<%= translation_js(:menu, :button) %>

<div id="categories-menu-left-side" class="hidden">

  <!-- Left side content start -->
  <% if total_number_of_products > 0 %>
    <div class="col-md-6 mobile-category-menu__right">
      <a href="<%= manage_cart_orders_path %>" class="mobile-category-menu__right --checkout"><%= I18n.t(:checkout, scope: :button) %> <i class="fa fa-check-circle"></i></a>
    </div>
  <% end %>
  <!-- End of left side content -->

</div>

<nav id="categories-menu">
  <ul>

    <!-- Account side -->
    <li><a href="<%= manage_cart_orders_path %>"><%= I18n.t(:my_cart, scope: :menu) %></a></li>
    <li>

      <% if current_user.nil? %>
      <a href="<%= new_user_session_path %>"><%= I18n.t(:signin) %></a>
      <% else %>
      <a href="<%= edit_account_user_path(current_user) %>"><%= I18n.t(:my_account, scope: :menu) %></a>
      <% end %>

    </li>

    <% unless @categories.empty? %>
    <% @categories.each do |category| %>
    <li>
      <a href="<%= category_path(category) %>"><%= category.name %></a>
    </li>
    <% end %>
    <% end %>

  </ul>
</nav>
