<div class="row" id="messages-container">
  <% if flash[:error] %>
  <div id="message-error" class="col-md-6 col-md-push-3 col-md-pull-3 message message__error +centered">
    <%= flash[:error] %>
  </div>
  <% end %>

  <% if flash[:success] %>
  <div id="message-success" class="col-md-6 col-md-push-3 col-md-pull-3 message message__success +centered">
    <%= flash[:success] %>
  </div>
  <% end %>
</div>