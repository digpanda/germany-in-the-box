<!-- Login and such (partials) -->
<nav class="<%= for_device_type :desktop do 'navbar-fixed-top' end %>">
  <%= render 'layouts/dialogs' %>
</nav>

<!-- Main Menu Area -->
<div class="row main-header">

  <!-- Left side -->
  <div class="col-md-2">

    <!-- Logo -->
    <a href="<%= root_path %>">
      <div class="main-header__logo +centered">
        <img src="/assets/logo-half.png">
      </div>
    </a>

  </div>

  <!-- Right side -->
  <div class="col-md-10 +vertical-centered">

    <!-- My Account -->
    <div class="col-md-1 pull-right +centered">

      <% if current_user&.is_admin? %>

      <%= render 'layouts/header/menu/admin' %>

      <% elsif current_user&.is_shopkeeper? %>

      <%= render 'layouts/header/menu/shopkeeper' %>

      <% elsif current_user&.is_customer? %>

      <%= render 'layouts/header/menu/customer' %>

      <% else %>
      <a class="popup-text" data-effect="mfp-zoom-out" href="#login-dialog" id="sign_in_link">

        <div class="main-header__account">
        <i class="fa fa-sign-in"></i>
        Sign in
        </div>

      </a>
      <% end %>

    </div>

    <% if seems_like_a_customer? %>

    <!-- Products Cart -->
    <div class="col-md-1 pull-right +centered +menu-bordering">

      <a href="<%= manage_cart_orders_path %>">

        <div class="main-header__cart">
        <i class="fa fa-shopping-cart"></i>

        <%= total_number_of_products %>
        </div>

      </a>

    </div>

    <!-- Customer Likes -->
    <div class="col-md-1 pull-right +centered +menu-bordering">

      <a href="<%= (current_user.nil? ? "#" : show_collections_user_path(current_user, :user_info_edit_part => :edit_collection)) %>">
        
        <div class="main-header__likes">
        <i class="fa fa-heart"></i> 

        <span id="total-likes">
          <% if current_user.nil? %>
            0
          <% else %>
            <%= current_user.favorites.count %>
          <% end %>
        </span>

        </div>
      </a>

    </div>

<% end %>

</div>

</div>
<!-- End of Main Menu Area -->

<!-- Category Menu -->
<div class="row category-menu">

  <!-- Search -->
  <div class="col-md-2 col-md-offset-2">

    <div class="category-menu__search">

    <!-- Research area -->
     <form action="<%= search_products_path %>">
          <i class="fa fa-search"></i>
          <input type="query" id="search" name="query" autocomplete="off" placeholder="Search" />
          <button type="submit" class="+hidden"></button>
        </form>

    </div>

  </div>

  <div class="col-md-7">

    <div class="col-md-1"></div>

    <nav>
      <%= render partial: "layouts/header/parts/categories" %>
    </nav>

    <div class="col-md-1"></div>

  </div>

</div>
<!-- End of Category Menu -->
