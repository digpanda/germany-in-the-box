<div class="navbar-fixed-top">

<!-- Main Menu Area -->
<div class="row main-header">

  <!-- Left side -->
  <div class="col-md-2 col-md-push-1">
    <%= render partial: "layouts/header/parts/logo" %>
  </div>

  <!-- Right side -->
  <div class="col-md-8 col-md-push-1 main-header__right-side +vertical-centered">

    <!-- My Account -->
    <div class="col-md-1 pull-right +centered">
      <%= render partial: "layouts/header/parts/my_account" %>
    </div>

    <% if potential_customer? %>

      <!-- Products Cart -->
      <div class="col-md-1 pull-right +centered +menu-bordering">
        <%= render partial: "layouts/header/parts/products_cart" %>
      </div>

      <!-- Customer Likes -->
      <div class="col-md-1 pull-right +centered +menu-bordering">
        <%= render partial: "layouts/header/parts/customer_likes" %>
      </div>

    <% end %>

</div>

</div>
<!-- End of Main Menu Area -->

<% if potential_customer? %>

  <div class="row mobile-category-menu">
    <%= render partial: "layouts/header/menu/mobile_categories" %>
  </div>

  <!-- Category + Search Menu -->
  <div class="row category-menu">

    <!-- Search -->
    <div class="col-md-2 col-md-offset-2">
      <%= render partial: "layouts/header/parts/search" %>
    </div>

    <!-- Categories Menu -->
    <div class="col-md-7 col-md-push-1 col-md-pull-1">
      <%= render partial: "layouts/header/parts/menu/categories_menu" %>
    </div>

  </div>

<% end %>

</div>

<div class="+big-spacer"></div>

<% if potential_customer? %>

  <div class="+spacer"></div>

<% end %>

<%= render partial: "layouts/header/parts/messages" %>

<%= render partial: "layouts/header/parts/breadcrumb" %>

<div class="+small-spacer"></div>

<!-- End of Category Menu -->
