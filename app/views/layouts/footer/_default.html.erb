      <!-- Footer -->
      <div class="row">

        <h1>Want to know more about us ?</h1>

        <div class="col-md-12 main-footer">

          <div class="main-footer__logo col-md-3 col-md-offset-1">
            <img src="/assets/logo-min-white.png">
          </div>
          <div class="col-md-2">

            <div class="row +up">Germany in the Box</div>
            <div class="row"><%= link_to I18n.t(:privarcy_statement, scope: :footer), privacy_page_path, :target => 'blank' %></div>
            <div class="row"><%= link_to I18n.t(:imprint, scope: :footer), imprint_page_path, :target => 'blank' %></div>
            <div class="row"><%= link_to I18n.t(:vouchers, scope: :footer), '#' %></div>

