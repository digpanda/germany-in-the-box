<% if current_user.nil? %>

  <%= render partial: "layouts/admin/header/my_account/signin" %>

<% else %>

  <% if current_user.decorate.new_notifications? %>
    <a href="<%= shared_notifications_path %>">
  <% else %>
    <a href="<%= edit_admin_account_path %>">
  <% end %>

  <%= render "layouts/admin/header/my_account/avatar" %>

  </a>

<% end %>
