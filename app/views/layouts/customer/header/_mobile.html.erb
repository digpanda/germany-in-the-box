<div class="container-fluid header-mobile">
  <div class="row">

    <!-- Categories -->
    <div class="col-xs-2 header-mobile__categories">
      <div class="row">

        <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target="#mobile-menu" data-canvas="body">
          <i class="fa fa-bars"></i>
        </button>

        <nav id="mobile-menu" class="navmenu navmenu-default navmenu-fixed-left offcanvas" role="navigation">

          <ul>
            <li><a href="<%= resolve_profile_path %>" class="header-desktop__menu --green">My Profile</a></li>
            <li><a href="<%= customer_favorites_path %>" class="header-desktop__menu --pink">My Favorites</a></li>
            <hr />
            <% @categories.each do |category| %>
            <li>
              <a href="<%= guest_category_path(category) %>"><%= category.name %></a>
            </li>
            <% end %>
          </ul>

        </nav>

      </div>
    </div>

    <!-- Logo -->
    <div class="col-xs-7 header-mobile__logo">
      <%= render partial: "layouts/customer/header/logo" %>
    </div>

    <!-- Menu -->
    <div class="col-xs-3 header-mobile__menu">
      <div class="row">

        <nav>
            <div class="col-xs-6">
                <a href="#" class="header-mobile__menu --green"><i class="fa fa-search"></i></a>
            </div>
            <div class="col-xs-6">
                <a href="<%= customer_cart_path %>" class="header-mobile__menu --green"><i class="fa fa-shopping-cart"></i></a>
            </div>
        </nav>

      </div>
    </div>
  </div>
</div>
