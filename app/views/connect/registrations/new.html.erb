<div class="row">

  <div class="col-md-4 col-md-push-4 col-md-pull-4 col-xs-10 col-xs-push-1 col-xs-pull-1">

    <h3>
      <%= I18n.t('sign_up_dialog.header') %>
    </h3>
    <h5>
      <%= I18n.t('sign_up_dialog.title') %>
    </h5>

    <hr />

    <%= form_for resource, url: user_registration_path(resource), :method => :post, :class => 'dialog-form', :data => {:toggle => 'validator'} do |f| %>
    <div class="form-inline">
      <div class="form-group">
        <%= f.text_field :lname, :class => 'form-control', :placeholder => I18n.t('edit_address.lname'), :required => true %>
      </div>
      <div class="form-group">
        <%= f.text_field :fname, :class => 'form-control', :placeholder => I18n.t('edit_address.fname'), :required => true %>
      </div>

      <div class="+small-spacer"></div>

    </div>
    <div class="form-group">
      <%= f.email_field :email, :class => 'form-control', :placeholder => I18n.t('sign_up_dialog.email'), :required => true %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, :class => 'form-control', :placeholder => I18n.t('sign_up_dialog.password'), :required => true %>
      <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => I18n.t('sign_up_dialog.password_confirmation'), 'data-match' => '#user_password' %>
      <div class="help-block with-errors"></div>
    </div>

    <%= submit_tag I18n.t('sign_up_dialog.sign_up'), :class => 'big-button --green' %>
    <div class="+small-spacer"></div>

    <% end %>

    <a class="big-button --grey --smaller +centered" href="<%= new_user_session_path %>">
      <%= I18n.t('sign_up_dialog.already_member') %>
    </a>
    <div class="+small-spacer"></div>

  </div>
</div>

<%= render partial: "connect/shared/alternative_login" %>
