<div class="row">
  <div class="col-md-4 col-md-push-4 col-md-pull-4 col-xs-10 col-xs-push-1 col-xs-pull-1">
    <h3>
      <%= I18n.t('sign_in_dialog.header') %>
    </h3>
    <h5>
      <%= I18n.t('sign_in_dialog.title') %>
    </h5>
    <hr />
    <%= form_tag user_session_path, :method => :post, :class => 'dialog-form'  do %>
    <div class="form-group">
      <label>
        <%= I18n.t('sign_in_dialog.email') %>
      </label>
      <%= email_field_tag 'user[email]',  nil, :class => 'form-control', :placeholder => 'email@domain.com', :required => true %>
      <div class="help-block with-errors"></div>
    </div>
    <div class="form-group">
      <label>
        <%= I18n.t('sign_in_dialog.password') %>
      </label>
      <%= password_field_tag 'user[password]', nil, :class => 'form-control', :placeholder => I18n.t('sign_up_dialog.password'), :required => true %>
    </div>

    <div class="col-md-6 col-xs-6">
      <label class="+thin">
        <input checked="checked" type="checkbox"></input>
        <%= I18n.t('sign_in_dialog.remember_me') %>
      </label>
    </div>

    <div class="col-md-6 col-xs-6 +right">
      <a class="simple-text" href="<%= new_user_password_path %>">
        <%= I18n.t('sign_in_dialog.forgot_password') %>
      </a>
    </div>

    <!-- Buttons -->
    <div class="col-md-12 col-xs-12">
      <div class="+small-spacer"></div>
        <%= submit_tag I18n.t('sign_in_dialog.sign_in'), :id => 'sign_in', :class => 'big-button --green' %>
        <div class="+small-spacer"></div>
    </div>

    <div class="col-md-12 col-xs-12">
      <a class="big-button --grey --smaller +centered" href="<%= new_user_registration_path %>">
        <%= I18n.t('sign_in_dialog.not_member_yet') %>
      </a>
      <div class="+small-spacer"></div>
    </div>

    <% end %>
  </div>
</div>

<%= render partial: "connect/shared/alternative_login" %>
