          <div class="col-md-3">
            <div class="fileUpload btn btn-default">
              <span>
                <i class="fa fa-cloud-upload"></i>
                <%= I18n.t(:upload, scope: :image_upload) %>
              </span>
              <%= f.file_field :seal6, :accept => "image/png, image/jpeg, image/jpg", :img_id => "#seal_6_#{@shop.id}", :class => 'img-file-upload upload', :onchange =>"validateImgFile(this);" %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="fileUpload btn btn-default">
              <span>
                <i class="fa fa-cloud-upload"></i>
                <%= I18n.t(:upload, scope: :image_upload) %>
              </span>
              <%= f.file_field :seal7, :accept => "image/png, image/jpeg, image/jpg", :img_id => "#seal_7_#{@shop.id}", :class => 'img-file-upload upload', :onchange =>"validateImgFile(this);" %>
