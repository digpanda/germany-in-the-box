<div class="+spacer"></div>

<div class="col-md-8 col-md-push-2 col-md-pull-2">

  <!-- Shop Blocks -->
  <div class="shop-page">

    <div class="row">
      <!-- Shop Header -->
      <%= render partial: "shop_header", :locals => { :shop => @shop } %>
    </div>

    <div class="+spacer"></div>

    <div class="row +nomargin">
      <!-- Products list -->
      <%= render partial: "products/products_list", :locals => { :products => @shop.products.showable } %>
    </div>

    <div class="+spacer"></div>

    <div class="row">
      <!-- Shop Footer -->
      <%= render partial: "shop_footer", :locals => { :shop => @shop } %>
    </div>

    <div class="+spacer"></div>

  </div>
  <!-- End of Shop Blocks -->

</div>
