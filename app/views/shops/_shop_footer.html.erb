  <div class="+overlay"></div>

  <div class="+onoverlay">

    <!-- Content -->
    <div class="shop-page-footer__content">

      <div class="row">

        <div class="col-md-4">
          <h3>Philosophy</h3>
          <%= shop.philosophy %>
        </div>

        <div class="col-md-4">
          <h3>Uniqueness</h3>
          <%= shop.uniqueness %>
        </div>

        <div class="col-md-4">
          <h3>Impressum</h3>
          <%= shop.name %> <br />
          <%= shop.decorate.manager_full_name %> <br />
          <%= shop.mail %> <br /> <br />
          <%= shop.billing_address.decorate.imprint_address.html_safe %> <br />
