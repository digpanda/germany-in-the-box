<h3 style="margin-bottom:0em;">&nbsp;&nbsp;&nbsp;Rechnung</h3>
<strong>Rechnung Nr.: <%= @order.bill_id %></strong>

<br />
<br />

<table style="text-align:left;width:100%;border-color:black;border-width:1px;border-style:solid;">
  <thead>
    <tr>
      <th>
        Pos.
      </th>
      <th>
        Produktname
      </th>
      <th>
        Preis (EUR)
      </th>
      <th>
        Menge
      </th>
      <th style="text-align:right;">
        Netto-Umsatz (EUR)
      </th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each_with_index do |order_item, index| %>
    <tr>
      <td>
      <%= (index+1) %>
      </td>
      <td>
        <%= order_item.product.name_translations[:de] %> (<%= order_item.selected_options(:de).join(', ') %>)
      </td>
      <td>
        <%= order_item.price_per_unit.in_euro.display %>
      </td>
      <td align="center">
        <%= order_item.quantity %>
      </td>
      <td style="text-align:right;">
        <%= (order_item.price_per_unit * order_item.quantity).in_euro.display %>
      </td>
    </tr>
    <% end %>
    <tr>
      <td>
      </td>
      <td>
      </td>
      <td>
      </td>
      <td>
      Gesamt Produktpreis
      </td>
      <td style="text-align:right;">
      <%= @order.total_price.in_euro.display %>
      </td>
    </tr>
  </tbody>
</table>

<br />

<table style="text-align:left;width:100%;border-color:black;border-width:1px;border-style:solid;">
  <thead>
    <tr>
      <th>
      </th>
      <th>
        Prozesskosten
      </th>
      <th style="text-align:right;">
        Betrag (EUR)
      </th>
    </tr>
  </thead>
  <tbody>

    <tr>
      <td>
        <%= @order.order_items.count+1 %>
      </td>
      <td>
        Internationale Versandkosten
        FRA-Endkunden(China)
      </td>
      <td style="text-align:right;">
        <%= @order.decorate.shipping_cost.in_euro.display %>
      </td>
    </tr>

    <tr>
      <td>
        <%= @order.order_items.count+2 %>
      </td>
      <td>
        Pers√∂nliche Importsteuern
      </td>
      <td style="text-align:right;">
        <%= @order.taxes_cost.in_euro.display %>
      </td>
    </tr>

    <tr>
      <td>
      </td>
      <td style="text-align:right;width:460px;">
        Gesamt Prozesskosten
      </td>
      <td style="text-align:right;">
        <%= (@order.decorate.shipping_cost + @order.decorate.taxes_cost).in_euro.display %>
      </td>
    </tr>

  </tbody>
</table>

<br />

<% if @order.discount? %>

  <table style="text-align:left;width:100%;border-color:black;border-width:1px;border-style:solid;">
    <thead>
      <tr>
        <th>
        </th>
        <th>
          Sonstig
        </th>
        <th style="text-align:right;">
          Betrag (EUR)
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%= @order.order_items.count+3 %>
        </td>
        <td>
          Rabatt <%= @order.coupon.code %> <%= @order.coupon.decorate.discount_display %>
        </td>
        <td style="text-align:right;">
          - <%= @order.coupon_discount.in_euro.display %>
        </td>
      </tr>
    </tbody>
  </table>

  <br />

<% end %>


