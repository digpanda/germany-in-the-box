<table style="width:100%;border-color:black;border-width:1px;border-style:solid;">
  <thead>
    <tr>
      <th>
        <%= I18n.t(:name, scope: :cart) %>
      </th>
      <th>
        <%= I18n.t(:variant_option, scope: :cart) %>
      </th>
      <th>
        <%= I18n.t(:quantity, scope: :cart) %>
      </th>
      <th>
        <%= I18n.t(:unit_price, scope: :cart) %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |order_item| %>
    <tr>
      <td>
        <%= order_item.product.name %>
      </td>
      <td>
        <%= order_item.selected_options.join(', ') %>
      </td>
      <td><%= order_item.quantity %></td>
      <td>
        <%= order_item.sku.decorate.price_with_currency_yuan %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>