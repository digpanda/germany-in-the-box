<div class="panel-group">
  <div class="panel panel-info">
    <div class="panel-heading text-center">
      <%= I18n.t(:wirecard_payment_partnership, scope: :title) %>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <div class="row-fluid">
          <% if @shop.billing_address.nil? %>
            <%= I18n.t(:you_must_add, scope: :composed_text) %>
            <%= link_to I18n.t(:billing_address, scope: :composed_text), show_addresses_user_path(current_user, :user_info_edit_part => :edit_shop_address) %>
            <%= I18n.t(:to_activate_this_section, scope: :composed_text) %>
          <% else %>
            <% if @shop.wirecard_status == :unactive %>
              <%= link_to "Registrieren fÃ¼r WireCard Checkoutportal", apply_shopkeeper_wirecard_path, {class: "btn btn-danger", target: "_blank" } %>
            <% elsif @shop.wirecard_status == :active %>
              <%= link_to "#{I18n.t(:signin)} WireCard Checkoutportal", "https://www.checkoutportal.de/de_DE/login", {class: "btn btn-success", target: "_blank"} %>
            <% elsif @shop.wirecard_status == :processing %>
              Your status is processing
            <% elsif @shop.wirecard_status == :documents_complete %>
              Your documents are complete
            <% elsif @shop.wirecard_status == :declined %>
              You were disapproved by WireCard
            <% elsif @shop.wirecard_status == :terminated %>
              You were terminated by WireCard
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
