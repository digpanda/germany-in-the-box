<%= form_for @shop, :url => shopkeeper_setting_path(@shop), :data => {:toggle => 'validator'} do |form| %>

  <div class="row details__block">
    <%= render partial: "shopkeeper/settings/index/form/legal", :locals => {:f => form} %>
  </div>

  <div class="row details__block">
    <%= render partial: "shopkeeper/settings/index/form/agb", :locals => {:f => form} %>
  </div>

  <div class="row details__block">
    <%= render partial: "shopkeeper/settings/index/form/delivery_options", :locals => {:f => form} %>
  </div>

  <div class="row details__block">
    <%= render partial: "shopkeeper/settings/index/form/pricing", :locals => {:f => form} %>
  </div>

  <%= form.button I18n.t(:save, scope: :edit_shop, locale: locale), :class => 'btn btn-primary' %>

<% end %>
