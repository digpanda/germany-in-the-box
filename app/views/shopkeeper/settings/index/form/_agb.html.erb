<div class="col-md-12">
  <div class="row">
    <h3><%= I18n.t(:agb, scope: :edit_shop) %></h3>
    <hr>
  </div>
  <div class="row">
    <div class="col-md-12">

    <% if @shop.agb %>
      <%= form.check_box :agb, { :disabled => true } %>
    <% else %>
      <%= form.check_box :agb, { :required => true }, true %>
    <% end %>
    <%= form.label :agb, I18n.t(:agb_statement, scope: :edit_shop).html_safe %>
    </div>
  </div>

</div>
