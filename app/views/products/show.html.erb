<div class="+spacer"></div>

  <div class="row col-md-8 col-md-push-2 col-md-pull-2 product-page">

    <!-- Preview -->
    <div class="col-md-6">

      <%= render partial: "products/show/preview", :locals => {product: @product} %>

    </div>

    <!-- Shop + Product description -->
    <div class="col-md-6">

        <h2>
          <%= @product.name %> <%= render partial: "products/show/like", :locals => { :product => @product } %>
        </h2>

        <% if @mas %>

          <span class="+discount"><%= @product.decorate.preview_discount %></span>
          <br />
          <span class="+barred +dark-grey">
          <%= @mas.price_before_discount_in_yuan %>
          <%= @mas.price_before_discount_in_euro %>
          </span>

          <span id="product_price_with_currency_yuan_yuan" class="+price-yuan"><%= @product.decorate.preview_price_yuan %></span> <span id="product_price_with_currency_euro" class="+price-euro"><%= @product.decorate.preview_price_euro %></span>


        <% end %>

        <% unless @mas.unlimited || @mas.quantity == 0 %>
          <% if @mas.quantity <= ::Rails.application.config.digpanda[:products_warning] %>
            | <span class="+red +up +bold"> Only <span id="quantity-left"><%= @mas.quantity %></span> left</span>
          <% end %>
        <% end %>

        <div class="+small-spacer"></div>
        
        <%= form_tag add_product_to_orders_path, :method => :patch do %>

            <%= hidden_field_tag 'sku[product_id]', "#{@product.id}" %>

            <% if @mas %>

                <%= render partial: "products/show/select_sku", :locals => {product: @product} %>

                <div class="+small-spacer"></div>

                <%= render partial: "products/show/select_quantity", :locals => {product: @product} %>

            <% else %>

                <%= submit_tag "#{I18n.t(:not_available, scope: :popular_products)}", :class => 'btn btn-primary btn-lg', :disabled => true %>

            <% end %>
        <% end %>

        <div class="+small-spacer"></div>

        <div class="product-page__description">

          <h3>Description</h3>

          <%= @product.desc %>

          <div class="+small-spacer"></div>

          <div id="product-file-attachment-and-data">

          <% if @mas.attach0.file || @mas.data %>

            <h3>More</h3>

            <% if @mas.data %>
              <%= @mas.data %>
            <% end %>

            <br />

            <% if @mas.attach0.file %>
              <a class="btn btn-default" href="<%=  @mas.attach0.url %>">PDF Documentation</a>
            <% end %>
            
          <% end %>

          </div>

        </div>
        
    </div>

  </div>

  <div class="row">
    <div class="+spacer"></div>
  </div>