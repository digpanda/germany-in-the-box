<%= translation_js(:more, :title) %>

<div class="+spacer"></div>

  <div class="row col-md-8 col-md-push-2 col-md-pull-2 product-page">

    <!-- Preview -->
    <div class="col-md-6">

      <%= render partial: "products/show/preview", :locals => {product: @product} %>

    </div>

    <!-- Shop + Product description -->
    <div class="col-md-6">

        <h2>
          <%= @product.name %> <%= render partial: "products/show/like", :locals => { :product => @product } %>
          <span id="product_discount" class="<% if @featured_sku.discount? %>+discount<% end %>">
            <%= @product.decorate.preview_discount if @featured_sku.discount? %>
          </span>
        </h2>

        <% if @featured_sku %>

          <span id="product_discount_with_currency_yuan" class="+dark-grey +medium">
          <% if @featured_sku.discount? %>
            <span class="+barred"></span>
            <%= @featured_sku.price_before_discount_in_yuan %>
          <% end %>
          </span>

          <span id="product_discount_with_currency_euro" class="+price-euro +dark-grey">
          <% if @featured_sku.discount? %>
            <%= @featured_sku.price_before_discount_in_euro %>
          <% end %>
          </span>

          <br />

          <span id="product_price_with_currency_yuan" class="+price-yuan"><%= @product.decorate.preview_price_yuan %></span> <span id="product_price_with_currency_euro" class="+price-euro"><%= @product.decorate.preview_price_euro %></span>


        <% end %>

        <% if @featured_sku.quantity_warning? %>
          | <span class="+red +up +bold"> Only <span id="quantity-left"><%= @featured_sku.quantity %></span> left</span>
        <% end %>

        <div class="+small-spacer"></div>

        <%= form_tag add_product_to_orders_path, :method => :patch do %>

            <%= hidden_field_tag 'sku[product_id]', "#{@product.id}" %>

            <% if @featured_sku %>

                <%= render partial: "products/show/select_sku", :locals => {product: @product} %>

                <div class="+small-spacer"></div>

                <%= render partial: "products/show/select_quantity", :locals => {product: @product} %>

            <% else %>

                <%= submit_tag "#{I18n.t(:not_available, scope: :popular_products)}", :class => 'btn btn-primary btn-lg', :disabled => true %>

            <% end %>
        <% end %>

        <div class="+small-spacer"></div>

        <div class="product-page__description">

          <h3><% I18n.t(:description, scope: :title) %></h3>

          <%= @product.decorate.format_desc %>

          <div class="+small-spacer"></div>

          <div id="product-file-attachment-and-data">

          <% if @featured_sku.more_description? %>

            <h3><%= I18n.t(:more, scope: :title) %></h3>

            <% if @featured_sku.data %>
              <%= @featured_sku.decorate.format_data %>
            <% end %>

            <br />

            <% if @featured_sku.attach0.file %>
              <a class="btn btn-default" href="<%=  @featured_sku.attach0.url %>">PDF Documentation</a>
            <% end %>

          <% end %>

          </div>

        </div>

    </div>

  </div>

  <div class="row">
    <div class="+spacer"></div>
  </div>
