<!-- Start Product -->
  <div class="col-md-1 col-md-push-11 shop-page-product__purchase">


    <div class="row shop-page-product__purchase --like">

    <% unless current_user.nil? %>

      <% if product.is_favorite?(current_user) %>
      <a href="#" class="js-heart-click +red" data-product-id="<%= product.id %>" data-favorite="1"><i class="fa fa-heart"></i></a>
      <% else %>
      <a href="#" class="js-heart-click" data-product-id="<%= product.id %>" data-favorite="0"><i class="fa fa-heart"></i></a>
      <% end %>

    <% end %>

    </div>

  </div>

  <a href="<%= product_path(product) %>">

    <div class="col-md-12 shop-page-product__image +centered">

      <img src="http://7xt4mc.com1.z0.glb.clouddn.com/uploads/sku/img0/571568c18066513c0b4a43f2/200712181054552_2.jpg?e=1465413736&token=sjmi6rq8r6Z7oO84m9WQ3grXZJNaDmBlHC5eDWsu:BsLPP8cLNLJLg247j2GJ-isEgOs=&imageView2/2/w/400/h/400">

    </div>

    <div class="col-md-12 shop-page-product__description">

      <h2><%= product.name %></h2>
      <div class="shop-page-product__description --text">
        <%= product.decorate.short_desc %>
      </div>
      <div class="shop-page-product__description --prices">
        <span class="+price-yuan"><%= product.preview_price %></span> <span class="+price-euro">0â‚¬</span>
      </div>

    </div>

  </a>

