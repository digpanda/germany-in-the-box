    .col-md-9
      #masonry.row.row-wrap
        - @products.each do |p|
          -if p.product_info
            %a.col-md-3.col-masonry.popup-text{"data-effect" => "mfp-move-from-top", :href => "#product-quick-view-dialog-#{p.id}",  :shop_link => "#{p.product_info.shop_info.shop ? shop_path(p.product_info.shop_info.shop) : ''}"}
              .product-thumb
                %header.product-header
                  =image_tag  p.img, :alt => p.name, :title => p.name
                  .product-quick-view
                    %span.fa.fa-eye
                .product-inner
                  %h5.product-title= truncate(p.name, :length => 16) 
                  .product-desciption= truncate(p.desc, :length => 16)
                  .product-meta
                    %span.product-time
                      %i.fa.fa-clock-o
                      8 days 47 h
                    %ul.product-price-list
                      %li
                        %span.product-price $102
                      %li
                        %span.product-old-price $188
                  %p.product-location
                    %i.fa.fa-map-marker
                    Boston
