<span>
<%= I18n.t(:quantity, scope: :cart) %>
</span>

<div>
  <% if product.decorate.can_buy? %>

      <div class="product-quantity">

        <div class="col-md-10 col-xs-6">
          <div class="row">

            <div class="col-md-1 col-xs-2">
              <a id="quantity-minus" class="product-quantity__minus" href="#"><i class="fa fa-minus"></i></a>
            </div>

            <div class="col-md-2 col-xs-4">
              <input id="quantity" name="sku[quantity]" data-max="<%= product.decorate.featured_sku.decorate.max_added_to_cart %>" class="product-quantity__quantity" type="text" value="1">
            </div>

            <div class="col-md-1 col-xs-2">
              <a id="quantity-plus" class="product-quantity__plus" href="#"><i class="fa fa-plus"></i></a>
            </div>

          </div>

          <div class="row">
          <div class="+small-spacer"></div>

          <button type="submit" class="btn btn-primary btn-lg" <%= !enough_inventory(product.decorate.featured_sku, 1) ? "disabled" : "" %> ><i class="fa fa-shopping-cart"></i> <%= "#{I18n.t(:add_to_cart, scope: :popular_products)}" %></button>

          </div>

        </div>

      </div>

      <div class="row">
      <div class="+small-spacer"></div>
    </div>


    </form>

<!--
    <%= submit_tag "#{I18n.t(:add_to_cart, scope: :popular_products)}", :class => 'btn btn-primary btn-lg', :disabled => (not enough_inventory(product.decorate.featured_sku, 1)) %>
-->
  <% end %>
</div>
