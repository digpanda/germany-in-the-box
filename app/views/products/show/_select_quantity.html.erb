<span>
<%= I18n.t(:quantity, scope: :cart) %>
</span>

<div>
  <% if product.decorate.can_buy? %>
    <%= select_tag 'sku[quantity]', options_for_select(1..product.decorate.featured_sku.decorate.max_added_to_cart, 1), :class => 'form-control input-lg', :id => "product_quantity_#{product.id}" %>

    <div class="+small-spacer"></div>

    <%= submit_tag "#{I18n.t(:add_to_cart, scope: :popular_products)}", :class => 'btn btn-primary btn-lg', :disabled => (not enough_inventory(product.decorate.featured_sku, 1)) %>
  <% end %>
</div>
