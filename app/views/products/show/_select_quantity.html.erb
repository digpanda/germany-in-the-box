<span>
<%= I18n.t(:quantity, scope: :cart) %>
</span>

<div>
  <%= select_tag 'sku[quantity]', options_for_select(1..[Rails.configuration.max_add_to_cart_each_time, product.decorate.get_mas.quantity].min, 1), :class => 'form-control input-lg', :id => "product_quantity_#{product.id}" %>

  <div class="+small-spacer"></div>
  
  <%= submit_tag "#{I18n.t(:add_to_cart, scope: :popular_products)}", :class => 'btn btn-primary btn-lg', :disabled => (not enough_inventory(product.decorate.get_mas, 1)) %>
</div>