= form_for(@chat, :html => {:class => "form-horizontal", :role => "form"}) do |f|
  - if @chat.errors.any?
    .alert.alert-danger.alert-dismissable{:role => "alert"}
      %button.close{"data-dismiss" => "alert", :type => "button"}
        %span{"aria-hidden" => "true"} Ã—
        %span.sr-only Close
      %h4
        = pluralize(@chat.errors.count, "error")
        prohibited this chat from being saved:
      %ul
        - @chat.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :name, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :name, :class => "form-control"
  .form-group
    = f.label :desc, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :desc, :class => "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => "btn btn-primary"
