<%= form_tag(Adyen::Form.url) do %>
  <%=
  Adyen::Form.hidden_fields(
  :currency_code => 'EUR',
  :ship_before_date => Date.today,
  :session_validity => Time.now,
  :recurring => false,
  :merchant_reference => 'Some description about the order',
  :merchant_account => 'Digpanda',
  :skin_code => ENV['adyen_skin'],
  :shared_secret => ENV['adyen_hmac'],
  :payment_amount => 30 * 100 # cents
  )
  %>
  <%= submit_tag('pay') %>
<% end %>
