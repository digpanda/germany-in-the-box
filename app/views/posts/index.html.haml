%p#notice= notice
%h1 Listing Posts
%table
  %thead
    %tr
      %th Name
      %th Image
      %th Productid
      %th Collectionid
      %th Chatid
      %th{:colspan => "3"}
  %tbody
    - @posts.each do |post|
      %tr
        %td= post.name
        %td= post.image_identifier
        %td= post.productId
        %td= post.collectionId
        %td= post.chatId
        %td= link_to 'Show', post
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post, method: :delete, data: {confirm: 'Are you sure?'}
%br/
= link_to 'New Post', new_post_path
