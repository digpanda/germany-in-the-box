<% if @applications.size > 0 %>
  <table class="table cart-table">
    <thead>
      <th>
        <%= I18n.t(:email, scope: :edit_shop_application) %>
      </th>
      <th>
        <%= I18n.t(:name, scope: :edit_shop) %>
      </th>
      <th>
        <%= I18n.t(:password, scope: :edit_shop_application) %>
      </th>
      <th>
        <%= I18n.t(:application_timestamp, scope: :edit_shop_application) %>
      </th>
      <th>
        <%= I18n.t(:operations, scope: :edit_shop_applications) %>
      </th>
    </thead>
    <tbody>
      <% @applications.each do |a| %>
        <tr>
          <td>
            <%= link_to a.email, shop_application_path(a, :user_info_edit_part => :edit_shop_applications) %>
          </td>
          <td>
            <%= a.name %>
          </td>
          <td>
            <%= a.code[0,8] unless a.code.nil? %>
          </td>
          <td>
            <%= a.c_at.strftime('%Y-%m-%d %H:%M:%S') %>
          </td>
          <td>
            <%= link_to '', shop_application_path(a), :method => :delete, data: { confirm: I18n.t(:delete_application_message, scope: :edit_shop_applications) }, :class => 'fa fa-times-circle fa-2x', :title => I18n.t(:remove, scope: :edit_shop_applications) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="+white-box +centered">
    <h4>
    <%= I18n.t(:no_applications, scope: :edit_shop_application) %>
   </h4>
 </div>
<% end %>
