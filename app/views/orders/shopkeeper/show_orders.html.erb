<% if @orders.size > 0 %>
  <table class="table cart-table">
    <thead>
      <tr>
        <th>
          <%= I18n.t(:id, scope: :edit_order) %>
        </th>
        <th>
          <%= I18n.t(:status, scope: :edit_order) %>
        </th>
        <th>
          <%= I18n.t(:total_price, scope: :edit_order) %>
        </th>
        <th>
          <%= I18n.t(:label, scope: :edit_order) %>
        </th>
        <th>
          <%= I18n.t(:updated_at, scope: :edit_order) %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |o| %>
        <tr>
          <td>
            <%= link_to o.id, order_path(o) %>
          </td>
          <td>
            <%= I18n.t(o.status, scope: :edit_order) %>
          </td>
          <td>
            <%= o.decorate.total_price_with_currency %>
          </td>
          <td>
            <%= o.border_guru_shipment_id ? (link_to I18n.t(:download, scope: :edit_order), dowload_label_order_path(o)) : '' %>
          </td>
          <td>
            <%= o.u_at.localtime.strftime('%Y-%m-%d %H:%M:%S') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate @orders, renderer: BootstrapPagination::Rails %>
<% else %>
  <h4>
    <%= I18n.t(:no_order, scope: :edit_order) %>
  </h4>
<% end %>
