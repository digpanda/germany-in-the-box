<div class="row">
  <div class="col-md-8 col-md-push-2 col-md-pull-2">
  <%= render 'cart', order: @order, currency_code: @currency_code %>
  </div>
</div>
<% if a = @order.shipping_address %>
  <div class="row col-md-4 col-md-push-4 col-md-pull-4 +white-box">
    <div class="address-box">
      <ul>
        <li>
          <%= "#{I18n.t(:street, scope: :edit_address)} : #{ a.street } #{ a.number }" %>
        </li>
        <li>
          <%= "#{I18n.t(:additional, scope: :edit_address)} : #{ a.additional }" %>
        </li>
        <li>
          <%= "#{I18n.t(:district, scope: :edit_address)} : #{ a.district }" %>
        </li>
        <li>
          <%= "#{I18n.t(:city, scope: :edit_address)} : #{ a.city }" %>
        </li>
        <li>
          <%= "#{I18n.t(:province, scope: :edit_address)} : #{ a.province }" %>
        </li>
        <li>
          <%= "#{I18n.t(:country, scope: :edit_address)} : #{ a.country_local_name }" %>
        </li>
        <li>
          <%= "#{I18n.t(:zip, scope: :edit_address)} : #{ a.zip }" %>
        </li>
      </ul>
    </div>
  </div>
<% else %>
    <div class="row col-md-8 col-md-push-2 col-md-pull-2 +white-box +centered">
      <h4>
      Delivery destination is not set yet.
      </h4>
    </div>
<% end %>

<div class="row">
  <div class="+spacer">
  </div>
</div>