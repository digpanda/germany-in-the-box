<div class="row +centered" id="payment_method_area">

  <div class="col-md-3 col-xs-12">
    <div class="+small-margin">
      <% if shop.payment_method? :wechatpay %>
      <a id="wechatpay" href="<%= gateway_customer_checkout_path(payment_method: :wechatpay) %>">
        <img src="/images/logos/raw-wechatpay-logo.png" width="150px">
      </a>

        <div class="+mobile">
          <br />
          <% if identity_solver.wechat_browser? %>
            <!-- Wechat warning for wechatpay -->
            <%= I18n.t('note.wechatpay_wechat_user') %>
          <% else %>
            <!-- No wechat mobile warning for wechatpay -->
              <%= I18n.t('note.wechatpay_no_wechat_mobile_user') %>
          <% end %>
        </div>

      <% end %>

    </div>
  </div>

  <div class="col-md-3 col-xs-12">
    <div class="+small-margin">
      <% if shop.payment_method? :alipay %>
      <a id="alipay" href="<%= gateway_customer_checkout_path(payment_method: :alipay) %>">
        <img src="/images/logos/raw-alipay-logo.png" width="150px">
      </a>

      <div class="+mobile">
        <br />
        <% if identity_solver.wechat_browser? %>
          <!-- Wechat warning for alipay -->
          <%= I18n.t('note.alipay_wechat_user') %>
        <% end %>
      </div>

      <% end %>
    </div>
  </div>

</div>

<div class="row +hidden" id="after_payment_method_area">

  <div class="col-md-12">
    <h2>
      页面正在跳转，请您耐心等待...
    </h2>

    <div class="+spacer"></div>
    <a href="<%= payment_method_customer_checkout_path %>" class="btn-lg btn-success"><%= I18n.t('checkout.refresh_page_button') %></a>
    <div class="+spacer"></div>

  </div>

</div>
