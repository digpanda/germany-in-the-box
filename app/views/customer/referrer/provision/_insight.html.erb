<div class="provision__insight">

  <!-- PROVISION INSIGHT -->
  <div class="provision__title">
    <%= I18n.t('referrer.provision_insight') %>
    <div class="provision__title-button">
      <a href="<%= provision_rates_customer_referrer_path %>"><%= I18n.t('referrer.provision_rates') %></a>
    </div>
  </div>

  <!-- PROVISION DETAILS -->
  <div class="provision__insight-details">

    <div class="row +nomargin">
      <div class="col-xs-6">
        <div class="provision__insight-details-total-earned">
          <%= I18n.t('referrer.total_earned') %>
          <div class="provision__insight-details-total-earned --digits"><%= referrer.total_earned.in_euro.display %></div>
        </div>
      </div>
      <div class="col-xs-6 +nopadding-left">
        <div class="provision__insight-details-current-balance">
          <%= I18n.t('referrer.current_balance') %>
          <div class="provision__insight-details-current-balance --digits"><%= referrer.current_balance.in_euro.display %></div>
          <div class="provision__insight-details-note"><%= I18n.t('referrer.your_can_claim_this_money_from', amount: setting.referrer_money_claim.in_euro.display) %></div>
        </div>
      </div>
    </div>

  </div>

  <!-- CLAIM THE MONEY -->
  <div class="+small-spacer"></div>
  <a href="<%= claim_customer_referrer_path %>" data-method="post" class="big-button --blue"><%= I18n.t('referrer.claim_your_money') %></a>
  <div class="+spacer"></div>

</div>
