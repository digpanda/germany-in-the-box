<% unless package_sets.count == 0 %>
<div class="referrer__orders">

  <!-- ORDERS LIST -->
  <div class="referrer__title">
    <%= I18n.t('referrer.package_set_provision_rates') %>
  </div>

  <div class="referrer__list">
    <table>
      <thead>
        <th>
          <%= I18n.t('referrer.package_set_product') %>
        </th>
        <th>
          <%= I18n.t('referrer.rate') %>
        </th>
      </thead>
      <tbody>

        <% package_sets.each do |package_set| %>
            <tr data-href="<%= guest_package_set_path(package_set) %>">
              <td>
                <%= package_set.name %>
              </td>
              <td>
                <%= package_set.referrer_rate %>%
              </td>
            </tr>
        <% end %>

      </tbody>
    </table>
  </div>

</div>

<div class="+spacer"></div>
<% end %>
