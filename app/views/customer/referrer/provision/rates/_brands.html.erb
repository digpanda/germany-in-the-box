<% unless brands.count == 0 %>
<div class="referrer__orders">

  <!-- ORDERS LIST -->
  <div class="referrer__title">
    <%= I18n.t('referrer.package_set_provision_rates') %>
  </div>

  <div class="referrer__list">
    <table>
      <thead>
        <th>
          <%= I18n.t('referrer.package_set_product') %>
        </th>
        <th>
          <%= I18n.t('referrer.rate') %>
        </th>
      </thead>
      <tbody>

        <% brands.each do |brand| %>
          <% unless brand.package_sets_referrer_rates_range(current_user) == [0.0] %>
            <tr>
              <td>
                <%= brand.name %>
              </td>
              <td>
                <%= brand.decorate.referrer_rate_range(current_user) %>
              </td>
            </tr>
          <% end %>
        <% end %>

      </tbody>
    </table>
  </div>

</div>

<div class="+spacer"></div>
<% end %>
