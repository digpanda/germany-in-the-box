<% unless links.count == 0 %>
<div class="referrer__orders">

  <!-- ORDERS LIST -->
  <div class="referrer__title">
    <%= I18n.t('referrer.links') %>
  </div>

  <div class="referrer__list">
    <table>
      <thead>
        <th>
          <%= I18n.t('referrer.title') %>
        </th>
        <th>
          <%= I18n.t('referrer.link') %>
        </th>
        <th>
          <%= I18n.t('referrer.share') %>
        </th>
        <th>
          <%= I18n.t('referrer.creation') %>
        </th>
      </thead>
      <tbody>

        <% links.each do |link| %>
          <tr data-href="#">
            <td>
              <%= link.title %>
            </td>
            <td>
              <a href="<%= link.wechat.with_referrer(@referrer) %>" target="_blank"><%= truncate link.wechat.with_referrer(@referrer), length: 30 %></a>
            </td>
            <td>
              -
            </td>
            <td>
              <%= link.c_at.strftime("%Y-%m-%d") %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>

</div>

<div class="+spacer"></div>
<% end %>
