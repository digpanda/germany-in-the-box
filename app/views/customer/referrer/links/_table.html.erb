<% unless links.count == 0 %>
<div class="referrer__orders">

  <!-- ORDERS LIST -->
  <div class="referrer__title">
    <%= I18n.t('referrer.links') %>
  </div>

  <div class="referrer__list">
    <table>
      <thead>
        <th>
          <%= I18n.t('referrer.image') %>
        </th>
        <th>
          <%= I18n.t('referrer.title') %>
        </th>
        <th>
          <%= I18n.t('referrer.creation') %>
        </th>
      </thead>
      <tbody>

        <% links.each do |link| %>
          <tr data-href="<%= customer_referrer_link_share_path(link) %>">
            <td>
              <img src="<%= link.thumbnail_url %>" class="icon-img">
            </td>
            <td>
              <% if current_user.tester? %>
              <a href="#"><%= link.title %></a>
              <% else %>
              -
              <% end %>
            </td>
            <td>
              <%= link.c_at.strftime("%Y-%m-%d") %>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>

</div>

<div class="+spacer"></div>
<% end %>
