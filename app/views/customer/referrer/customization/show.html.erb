<div class="row">
  <div class="col-md-8 col-md-push-2">

    <!-- BACK -->
    <%= render partial: 'customer/referrer/subheader', :locals => { back: customer_referrer_path } %>

    <%= form_for [:customer, @customization], :data => {:toggle => 'validator'} do |form| %>

    <h3><%= I18n.t('referrer.customize_title') %></h3>

    <div class="form-group">
      <div class="row">
        <div class="col-md-12">
          <%= form.text_field :title, :class => 'form-control', :placeholder => I18n.t('referrer.customize_title_placeholder') %>
          <div class="help-block with-errors +left"></div>
         </div>
       </div>
    </div>


    <h3><%= I18n.t('referrer.customize_logo') %></h3>
    <em>上传店铺图标尺寸250x250像素</em>

    <div class="form-group">
      <div class="row">
        <div class="col-md-12">
          <!-- Logo -->
          <div class="row">
            <div class="col-md-3">
              <%= js_file_upload(form: form, field: :logo) %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <input class="big-button --blue" type="submit" value="Save"></input>
    </div>

    <% end %>

    <% if @referrer.customization&.active && @referrer.customization&.logo&.url %>
    <hr />
      <div class="+centered">
        <img src="<%= guest_referrer_customized_qrcode_path(@referrer) %>" style="max-height: 500px;">
      </div>
    <% end %>

  </div>
</div>
