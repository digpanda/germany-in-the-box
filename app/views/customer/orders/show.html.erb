<div class="+spacer"></div>
<div class="row">
  <div class="col-md-8 col-md-push-1">
    <!-- TODO: refacto this -->
    <%= render 'customer/cart/show/order', order: @order, currency_code: @currency_code %>
  </div>
</div>

<div cass="row">
  <% if a = @order.shipping_address %>
  <div class="col-md-4 col-md-push-1 +white-box">
    <div class="address-box">
      <ul>
        <li>
          <%= "#{I18n.t(:street, scope: :edit_address)} : #{ a.street } #{ a.number }" %>
        </li>
        <li>
          <%= "#{I18n.t(:additional, scope: :edit_address)} : #{ a.additional }" %>
        </li>
        <li>
          <%= "#{I18n.t(:district, scope: :edit_address)} : #{ a.district }" %>
        </li>
        <li>
          <%= "#{I18n.t(:city, scope: :edit_address)} : #{ a.city }" %>
        </li>
        <li>
          <%= "#{I18n.t(:province, scope: :edit_address)} : #{ a.province }" %>
        </li>
        <li>
          <%= "#{I18n.t(:country, scope: :edit_address)} : #{ a.decorate.country_local_name }" %>
        </li>
        <li>
          <%= "#{I18n.t(:zip, scope: :edit_address)} : #{ a.zip }" %>
        </li>
      </ul>
    </div>
  </div>
  <% else %>
    <div class="col-md-4 col-md-push-2 +white-box +centered">
    <h4>
      <%= "#{I18n.t(:destination_address_not_set, scope: :edit_order)}" %>
    </h4>
  </div>
  <% end %>
  <div class="col-md-3 col-md-push-2 +white-box">
    <%= render partial: "customer/cart/show/total/list", :locals => { :order => @order } %>
  </div>
</div>

<div class="row">
  <div class="+spacer">
  </div>
</div>
