<!-- Shop name for the order -->
<% unless order.only_package_set? %>
<div class="row">
  <div class="col-md-12">
    <h4>
      <%= I18n.t(:shop, scope: :cart) %> :
      <%= link_to order.shop.shopname, guest_shop_path(order.shop) %>
    </h4>
  </div>
</div>
<% end %>

<!-- Package set display -->
<div class="row">
  <div class="col-md-12">
      <%= render partial: 'customer/cart/show/package_set_products', :locals => { :order_items => order.order_items.where(:package_set.ne => nil),
                                                                                  :package_set_ids => order.order_items.where(:package_set.ne => nil).pluck(:package_set),
                                                                                  :action => action } %>
  </div>
</div>

<!-- None package set display -->
<% unless order.only_package_set? %>
  <div class="row +overflow">
    <div class="col-md-12">
      <%= render partial: 'customer/cart/show/casual_products', :locals => { :order_items => order.order_items.where(package_set: nil), :action => action } %>
    </div>
  </div>
<% end %>

<% if cart_manager.in?(order) %>
  <!-- Action to the order -->
  <% if action %>
    <%= render partial: 'customer/cart/show/action', :locals => { :order => order } %>
  <% end %>
<% end %>
