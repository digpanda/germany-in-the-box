<!-- Package Sets related items -->
<% order.order_items.where(:package_set.ne => nil).each do |order_item| %>
  <%= render partial: 'customer/cart/show/order_items/package_set', :locals => { :order_item => order_item } %>
<% end %>

<!-- Products related items -->
<% unless order.only_package_set? %>
  <% order.order_items.where(:package_set => nil).each do |order_item| %>
    <%= render partial: 'customer/cart/show/order_items/casual_product', :locals => { :order_item => order_item } %>
  <% end %>
<% end %>
